[Unit]
Description=Quantix Tickets - Web Panel Service
After=network.target quantix-bot.service
Documentation=https://github.com/theredstonee/quantix-tickets
PartOf=quantix-tickets.target

[Service]
Type=simple
User=trs-bot
Group=trs-bot
WorkingDirectory=/home/trs-bot/ticketbot
ExecStart=/usr/bin/node web.js
Restart=always
RestartSec=10s

# Restart Limits - Verhindert Boot-Loops
StartLimitBurst=5
StartLimitIntervalSec=600

# Environment
Environment=NODE_ENV=production
Environment=WEB_PORT=3000
EnvironmentFile=/home/trs-bot/ticketbot/.env

# Security
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=/home/trs-bot/ticketbot/configs /home/trs-bot/ticketbot/transcripts /home/trs-bot/ticketbot/logs

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=quantix-web

# Process Management
KillMode=mixed
KillSignal=SIGTERM
TimeoutStopSec=30
SendSIGKILL=yes

[Install]
WantedBy=multi-user.target
WantedBy=quantix-tickets.target
