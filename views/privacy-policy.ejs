    <li><%= t.privacy?.section_2_tickets_3 || 'Ticket metadata (status, priority, timestamps)' %></li>
    <li><%= t.privacy?.section_2_tickets_4 || 'Assigned team members and added users' %></li>
  </ul>

  <h3><%= t.privacy?.section_2_subtitle_web || '2.3 Web Panel Data' %></h3>
  <ul>
