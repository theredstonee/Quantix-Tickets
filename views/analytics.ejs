  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Analytics - Quantix Tickets Bot</title>
  <!-- Favicon -->
  <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/images/favicon.png">
  <link rel="shortcut icon" href="/images/favicon.png">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@1/css/pico.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <!-- Halloween Special Edition -->
  <link rel="stylesheet" href="/css/halloween.css">
  <script src="/js/halloween.js" defer></script>
  <style>
    :root {
      --bg-color: #f0f8ff;
      --text-color: #1a1a2e;
      --border-color: #bdd7ee;
      --accent-color: #0ea5e9;
      --accent-hover: #0284c7;
      --card-bg: rgba(255, 255, 255, 0.9);
      --success-color: #0ea5e9;
      --warning-color: #ff9900;
      --error-color: #ff4444;
      --glass-bg: rgba(240, 248, 255, 0.7);
      --glass-border: rgba(14, 165, 233, 0.3);
      --shadow-color: rgba(14, 165, 233, 0.15);
    }

    [data-theme="dark"] {
      --bg-color: #000000;
      --text-color: #60a5fa;
      --border-color: #1e293b;
      --accent-color: #3b82f6;
      --accent-hover: #60a5fa;
      --card-bg: rgba(10, 10, 20, 0.9);
      --success-color: #3b82f6;
      --warning-color: #ff9900;
      --error-color: #ff4444;
      --glass-bg: rgba(10, 10, 20, 0.7);
      --glass-border: rgba(59, 130, 246, 0.3);
      --shadow-color: rgba(59, 130, 246, 0.2);
    }

    [data-theme="dark"] body {
      background-color: var(--bg-color);
      color: var(--text-color);
    }

    /* Animated Background */
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      background: radial-gradient(circle, var(--accent-color) 1px, transparent 1px);
      background-size: 50px 50px;
      opacity: 0.03;
      animation: bgMove 20s linear infinite;
    }

    @keyframes bgMove {
      0% { transform: translate(0, 0); }
      100% { transform: translate(50px, 50px); }
    }

    /* Dark Mode: Blaues Hintergrundmuster */
    [data-theme="dark"] body::before {
      background: radial-gradient(circle, rgba(59, 130, 246, 0.4) 1px, transparent 1px);
    }

    body {
      padding: 2rem;
      min-height: 100vh;
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
      flex-wrap: wrap;
      gap: 1rem;
    }

    .stat-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    .stat-card {
      background: var(--glass-bg);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border: 2px solid var(--glass-border);
      border-radius: 12px;
      padding: 1.5rem;
      transition: all 0.3s;
      box-shadow: 0 8px 32px var(--shadow-color);
    }

    .stat-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 40px var(--shadow-color);
      border-color: var(--accent-color);
    }

    .stat-card h3 {
      font-size: 0.9rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      opacity: 0.7;
      margin-bottom: 0.5rem;
    }

    .stat-value {
      font-size: 2.5rem;
      font-weight: 700;
      color: var(--accent-color);
      margin-bottom: 0.5rem;
    }

    .stat-icon {
      font-size: 2rem;
      opacity: 0.5;
      float: right;
    }

    .chart-container {
      background: var(--glass-bg);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border: 2px solid var(--glass-border);
      border-radius: 12px;
      padding: 2rem;
      margin-bottom: 2rem;
      box-shadow: 0 8px 32px var(--shadow-color);
      transition: all 0.3s ease;
    }

    .chart-container:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 40px var(--shadow-color);
    }

    .chart-title {
      font-size: 1.3rem;
      font-weight: 600;
      margin-bottom: 1.5rem;
      color: var(--text-color);
    }

    .bar-chart {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .bar-item {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .bar-label {
      min-width: 150px;
      font-weight: 500;
    }

    .bar-container {
      flex: 1;
      height: 30px;
      background: rgba(0, 184, 148, 0.1);
      border-radius: 6px;
      overflow: hidden;
      position: relative;
    }

    .bar-fill {
      height: 100%;
      background: linear-gradient(90deg, var(--accent-color), var(--accent-hover));
      transition: width 0.5s ease;
      display: flex;
      align-items: center;
      justify-content: flex-end;
      padding-right: 10px;
      color: white;
      font-weight: 600;
      font-size: 0.85rem;
    }

    .back-btn {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1.5rem;
      background: var(--accent-color);
      color: #000;
      text-decoration: none;
      border-radius: 8px;
      font-weight: 600;
      transition: all 0.2s;
    }

    .back-btn:hover {
      background: var(--accent-hover);
      transform: translateY(-2px);
    }

    .theme-toggle {
      position: fixed;
      top: 1.5rem;
      right: 1.5rem;
      background: var(--accent-color);
      color: #000;
      border: 0;
      width: 3rem;
      height: 3rem;
      border-radius: 50%;
      cursor: pointer;
      font-size: 1.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s;
      box-shadow: 0 2px 8px rgba(0,0,0,0.2);
      z-index: 1000;
    }

    .theme-toggle:hover {
      transform: scale(1.1);
    }

    .table-container {
      overflow-x: auto;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    th, td {
      padding: 1rem;
      text-align: left;
      border-bottom: 1px solid var(--border-color);
    }

    th {
      background: var(--card-bg);
      font-weight: 600;
      text-transform: uppercase;
      font-size: 0.85rem;
      letter-spacing: 0.5px;
    }

    .badge {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
      font-size: 0.85rem;
      font-weight: 600;
    }

    .badge-success {
      background: rgba(0, 255, 136, 0.2);
      color: var(--success-color);
    }

    .badge-warning {
      background: rgba(255, 153, 0, 0.2);
      color: var(--warning-color);
    }

    .badge-error {
      background: rgba(255, 68, 68, 0.2);
      color: var(--error-color);
    }

    @media (max-width: 768px) {
      body {
        padding: 1rem;
      }

      .stat-grid {
        grid-template-columns: 1fr;
      }

      .header {
        flex-direction: column;
        align-items: flex-start;
      }

      .bar-label {
        min-width: 100px;
        font-size: 0.85rem;
      }
    }

    /* Loading Overlay */
    .loading-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,0.95);
      display: none;
      justify-content: center;
      align-items: center;
      z-index: 99999;
      flex-direction: column;
      gap: 2rem;
    }

    .loading-overlay.show {
      display: flex;
    }

    .loading-content {
      text-align: center;
      background: rgba(255,255,255,0.05);
      padding: 3rem;
      border-radius: 20px;
      border: 1px solid rgba(0,255,136,0.2);
      max-width: 400px;
      width: 90%;
    }

    .loading-spinner {
      width: 60px;
      height: 60px;
      border: 6px solid rgba(0,255,136,0.1);
      border-top: 6px solid var(--accent-color);
      border-radius: 50%;
      animation: loadingSpin 1s linear infinite;
      margin: 0 auto 2rem;
    }

    .loading-text {
      font-size: 1.3rem;
      color: var(--accent-color);
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    .loading-subtext {
      font-size: 0.9rem;
      opacity: 0.7;
      color: var(--text-color);
    }

    @keyframes loadingSpin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
  </style>
</head>
<body>
  <!-- Loading Overlay -->
  <div class="loading-overlay" id="loadingOverlay">
    <div class="loading-content">
      <div class="loading-spinner"></div>
      <div class="loading-text" id="loadingText">Wird geladen...</div>
      <div class="loading-subtext">Bitte warten</div>
    </div>
  </div>

  <button class="theme-toggle" id="themeToggle" title="Dark Mode umschalten">
    <i class="fas fa-moon"></i>
  </button>

  <div class="container">
    <div class="header">
      <div>
        <h1><i class="fas fa-chart-line"></i> üìà Analytics</h1>
        <p style="opacity: 0.7; margin-top: 0.5rem;"><%= guildName %> ‚Ä¢ <%= stats.total %> Tickets gesamt</p>
      </div>
      <div style="display: flex; gap: 0.75rem; flex-wrap: wrap;">
        <a href="/panel" class="back-btn">
          <i class="fas fa-arrow-left"></i>
          Zur√ºck zum Panel
        </a>
        <a href="https://discord.com/invite/mnYbnpyyBS" target="_blank" class="back-btn" style="background: #5865F2; border-color: rgba(88, 101, 242, 0.3);">
          <i class="fab fa-discord"></i>
          Support Server
        </a>
        <% if (canExportCSV) { %>
        <a href="/export/tickets/csv" class="back-btn" style="background: linear-gradient(135deg, #10b981, #059669); border-color: rgba(16, 185, 129, 0.3);" title="Alle Tickets als CSV exportieren">
          <i class="fas fa-file-csv"></i>
          Export Tickets (CSV)
        </a>
        <a href="/export/stats/csv" class="back-btn" style="background: linear-gradient(135deg, #6366f1, #4f46e5); border-color: rgba(99, 102, 241, 0.3);" title="Statistiken als CSV exportieren">
          <i class="fas fa-chart-bar"></i>
          Export Stats (CSV)
        </a>
        <% } %>
      </div>
    </div>

    <!-- Overview Stats -->
    <div class="stat-grid">
      <div class="stat-card">
        <span class="stat-icon">üé´</span>
        <h3>Gesamt Tickets</h3>
        <div class="stat-value"><%= stats.total %></div>
      </div>

      <div class="stat-card">
        <span class="stat-icon">‚úÖ</span>
        <h3>Geschlossene</h3>
        <div class="stat-value"><%= stats.closed %></div>
        <small style="opacity: 0.7;"><%= stats.total > 0 ? Math.round((stats.closed / stats.total) * 100) : 0 %>%</small>
      </div>

      <div class="stat-card">
        <span class="stat-icon">üîì</span>
        <h3>Offene</h3>
        <div class="stat-value"><%= stats.open %></div>
        <small style="opacity: 0.7;"><%= stats.total > 0 ? Math.round((stats.open / stats.total) * 100) : 0 %>%</small>
      </div>

      <div class="stat-card">
        <span class="stat-icon">üë•</span>
        <h3>Geclaimt</h3>
        <div class="stat-value"><%= stats.claimed %></div>
        <small style="opacity: 0.7;"><%= stats.total > 0 ? Math.round((stats.claimed / stats.total) * 100) : 0 %>%</small>
      </div>
    </div>

    <!-- Tickets by Topic -->
    <% if (Object.keys(stats.byTopic).length > 0) { %>
    <div class="chart-container">
      <h2 class="chart-title">üìÅ Tickets nach Kategorie</h2>
      <div class="bar-chart">
        <%
        const topicEntries = Object.entries(stats.byTopic).sort((a, b) => b[1] - a[1]);
        const maxTopicCount = topicEntries[0]?.[1] || 1;
        topicEntries.forEach(([topic, count]) => {
          const percentage = (count / maxTopicCount) * 100;
        %>
        <div class="bar-item">
          <div class="bar-label"><%= topic %></div>
          <div class="bar-container">
            <div class="bar-fill" style="width: <%= percentage %>%"><%= count %></div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <% } %>

    <!-- Tickets by Priority -->
    <div class="chart-container">
      <h2 class="chart-title">üéØ Tickets nach Priorit√§t</h2>
      <div class="bar-chart">
        <%
        const priorities = [
          { label: 'üü¢ Gr√ºn (Niedrig)', value: stats.byPriority['0'] || 0, color: '#2bd94a' },
          { label: 'üü† Orange (Mittel)', value: stats.byPriority['1'] || 0, color: '#ff9900' },
          { label: 'üî¥ Rot (Hoch)', value: stats.byPriority['2'] || 0, color: '#d92b2b' }
        ];
        const maxPriorityCount = Math.max(...priorities.map(p => p.value)) || 1;
        priorities.forEach(p => {
          const percentage = (p.value / maxPriorityCount) * 100;
        %>
        <div class="bar-item">
          <div class="bar-label"><%= p.label %></div>
          <div class="bar-container">
            <div class="bar-fill" style="width: <%= percentage %>%; background: linear-gradient(90deg, <%= p.color %>, <%= p.color %>dd);"><%= p.value %></div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <!-- Top Claimer -->
    <% if (stats.topClaimers && stats.topClaimers.length > 0) { %>
    <div class="chart-container">
      <h2 class="chart-title">üëë Top Ticket-Bearbeiter</h2>
      <div class="table-container">
        <table>
          <thead>
            <tr>
              <th>Rang</th>
              <th>Bearbeiter</th>
              <th>Tickets</th>
              <th>Anteil</th>
            </tr>
          </thead>
          <tbody>
            <% stats.topClaimers.slice(0, 10).forEach((claimer, index) => {
              const percentage = stats.total > 0 ? Math.round((claimer.count / stats.total) * 100) : 0;
            %>
            <tr>
              <td>
                <% if (index === 0) { %>
                  <span style="font-size: 1.5rem;">ü•á</span>
                <% } else if (index === 1) { %>
                  <span style="font-size: 1.5rem;">ü•à</span>
                <% } else if (index === 2) { %>
                  <span style="font-size: 1.5rem;">ü•â</span>
                <% } else { %>
                  #<%= index + 1 %>
                <% } %>
              </td>
              <td><%= claimer.username || claimer.userId %></td>
              <td><strong><%= claimer.count %></strong></td>
              <td><span class="badge badge-success"><%= percentage %>%</span></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
    <% } %>

    <!-- Ticket Bewertungen -->
    <% if (ratingStats && ratingStats.total > 0) { %>
    <div class="chart-container" style="background: linear-gradient(135deg, var(--glass-bg), rgba(59, 130, 246, 0.1)); border: 2px solid rgba(59, 130, 246, 0.3);">
      <h2 class="chart-title">‚≠ê Ticket-Bewertungen</h2>

      <div class="stat-grid" style="grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); margin-bottom: 2rem;">
        <div class="stat-card" style="background: linear-gradient(135deg, #fbbf24, #f59e0b);">
          <span class="stat-icon">‚≠ê</span>
          <h3>Durchschnitt</h3>
          <div class="stat-value"><%= ratingStats.average %> / 5</div>
          <div class="stat-label"><%= ratingStats.total %> Bewertungen</div>
        </div>

        <div class="stat-card" style="background: linear-gradient(135deg, #3b82f6, #2563eb);">
          <span class="stat-icon">üí¨</span>
          <h3>Mit Feedback</h3>
          <div class="stat-value"><%= ratingStats.withFeedback %></div>
          <div class="stat-label"><%= Math.round((ratingStats.withFeedback / ratingStats.total) * 100) %>% der Bewertungen</div>
        </div>

        <div class="stat-card" style="background: linear-gradient(135deg, #10b981, #059669);">
          <span class="stat-icon">üéØ</span>
          <h3>5-Sterne</h3>
          <div class="stat-value"><%= ratingStats.byStars['5'] %></div>
          <div class="stat-label"><%= Math.round((ratingStats.byStars['5'] / ratingStats.total) * 100) %>% aller Bewertungen</div>
        </div>
      </div>

      <!-- Bewertungsverteilung -->
      <h3 style="margin: 1.5rem 0 1rem 0; font-size: 1.2rem;">üìä Bewertungsverteilung</h3>
      <div style="background: var(--glass-bg); padding: 1.5rem; border-radius: 12px; margin-bottom: 2rem;">
        <% for (let stars = 5; stars >= 1; stars--) {
          const count = ratingStats.byStars[stars.toString()] || 0;
          const percentage = ratingStats.total > 0 ? Math.round((count / ratingStats.total) * 100) : 0;
        %>
        <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 0.75rem;">
          <div style="min-width: 60px; font-weight: 600;"><%= '‚≠ê'.repeat(stars) %></div>
          <div style="flex: 1; background: rgba(255,255,255,0.1); border-radius: 8px; height: 24px; overflow: hidden;">
            <div style="background: linear-gradient(90deg, #fbbf24, #f59e0b); height: 100%; width: <%= percentage %>%; transition: width 0.3s;"></div>
          </div>
          <div style="min-width: 80px; text-align: right;"><strong><%= count %></strong> (<%= percentage %>%)</div>
        </div>
        <% } %>
      </div>

      <!-- Team Performance -->
      <%
      const teamMembers = Object.values(ratingStats.byTeamMember).sort((a, b) => b.average - a.average);
      if (teamMembers.length > 0) { %>
      <h3 style="margin: 1.5rem 0 1rem 0; font-size: 1.2rem;">üë• Team Performance</h3>
      <div class="table-container">
        <table>
          <thead>
            <tr>
              <th>Team-Mitglied</th>
              <th>Bewertungen</th>
              <th>Durchschnitt</th>
              <th>Performance</th>
            </tr>
          </thead>
          <tbody>
            <% teamMembers.forEach((member, index) => {
              let badgeColor = '#10b981'; // Gr√ºn
              if (member.average < 3) badgeColor = '#ef4444'; // Rot
              else if (member.average < 4) badgeColor = '#f59e0b'; // Orange
            %>
            <tr>
              <td>
                <% if (index === 0) { %>
                  <span style="font-size: 1.2rem;">üèÜ</span>
                <% } %>
                <%= member.username %>
              </td>
              <td><%= member.count %></td>
              <td><strong><%= member.average %> ‚≠ê</strong></td>
              <td>
                <span class="badge" style="background: <%= badgeColor %>;">
                  <% if (member.average >= 4.5) { %>
                    Exzellent
                  <% } else if (member.average >= 4) { %>
                    Sehr gut
                  <% } else if (member.average >= 3) { %>
                    Gut
                  <% } else { %>
                    Verbesserung n√∂tig
                  <% } %>
                </span>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <% } %>

      <!-- Letztes Feedback -->
      <% if (ratingStats.recent && ratingStats.recent.length > 0) { %>
      <h3 style="margin: 1.5rem 0 1rem 0; font-size: 1.2rem;">üí¨ Letztes Feedback</h3>
      <div style="display: grid; gap: 1rem;">
        <% ratingStats.recent.slice(0, 5).forEach(rating => { %>
        <div style="background: var(--glass-bg); padding: 1rem; border-radius: 8px; border-left: 3px solid #fbbf24;">
          <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 0.5rem;">
            <div>
              <strong>Ticket #<%= rating.ticketId %></strong>
              <span style="margin-left: 0.5rem;"><%= '‚≠ê'.repeat(rating.stars) %></span>
            </div>
            <div style="font-size: 0.85rem; opacity: 0.7;">
              <%= new Date(rating.ratedAt).toLocaleDateString('de-DE') %>
            </div>
          </div>
          <div style="color: var(--text-color); opacity: 0.9;">
            "<%= rating.feedback.substring(0, 200) %><%= rating.feedback.length > 200 ? '...' : '' %>"
          </div>
        </div>
        <% }) %>
      </div>
      <% } %>
    </div>
    <% } %>

    <!-- Recent Activity -->
    <div class="chart-container">
      <h2 class="chart-title">üìä Letzte 30 Tage</h2>
      <div class="stat-grid">
        <div class="stat-card">
          <span class="stat-icon">üìÖ</span>
          <h3>Heute</h3>
          <div class="stat-value"><%= stats.last30Days.today %></div>
        </div>
        <div class="stat-card">
          <span class="stat-icon">üìÜ</span>
          <h3>Letzte 7 Tage</h3>
          <div class="stat-value"><%= stats.last30Days.week %></div>
        </div>
        <div class="stat-card">
          <span class="stat-icon">üìà</span>
          <h3>Letzte 30 Tage</h3>
          <div class="stat-value"><%= stats.last30Days.month %></div>
        </div>
        <div class="stat-card">
          <span class="stat-icon">‚è±Ô∏è</span>
          <h3>√ò pro Tag</h3>
          <div class="stat-value"><%= stats.last30Days.avgPerDay %></div>
        </div>
      </div>
    </div>

    <!-- HEATMAP & INSIGHTS (Basic+ Feature) -->
    <% if (insights) { %>

    <!-- Hourly Activity Heatmap -->
    <div class="chart-container">
      <h2 class="chart-title">üïê Ticket-Erstellung nach Uhrzeit</h2>
      <p style="opacity: 0.7; margin-bottom: 1rem; font-size: 0.9rem;">
        Wann werden die meisten Tickets erstellt? (24-Stunden-Format)
