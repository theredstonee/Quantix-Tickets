      document.getElementById('banReason').value = ''; // Clear reason field
      currentGuildId = null;
      currentGuildName = null;
    }

    function confirmBlock() {
      if (currentGuildId) {
        const banReason = document.getElementById('banReason').value.trim();

        // Validate ban reason
        if (!banReason || banReason.length === 0) {
          alert('Bitte gib einen Ban-Grund an!');
          return;
