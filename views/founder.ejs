        // Hide loading overlay
        document.getElementById('loadingOverlay').classList.remove('active');
        console.error('Broadcast error:', error);
        alert('Fehler beim Senden des Changelogs: ' + error.message);
      }
    }

    function showBroadcastResults(data) {
      const modal = document.getElementById('broadcastResultsModal');
      const summary = document.getElementById('broadcastSummary');
      const resultsList = document.getElementById('broadcastResultsList');

      // Set summary
      const successCount = data.results.filter(r => r.success).length;
      const totalCount = data.results.length;
      const version = data.version || '1.0.4';
      summary.innerHTML = `
        Changelog <strong>v${version}</strong> wurde an
        <span style="color: var(--accent-color);">${successCount}</span> von
        <span style="color: var(--accent-color);">${totalCount}</span> Servern gesendet
      `;

      // Build results list
      let resultsHTML = '';
      data.results.forEach(result => {
        if (result.success) {
          resultsHTML += `
            <div class="result-item success">
              <div class="result-icon"><i class="fas fa-check-circle"></i></div>
              <div style="flex: 1;">
                <strong>${result.guildName || 'Unbekannt'}</strong>
                <div style="font-size: 0.85rem; opacity: 0.7; margin-top: 0.25rem;">
                  ${result.guildId} ‚Ä¢ ${result.channelName || 'Channel'}
                </div>
              </div>
            </div>
          `;
        } else {
          resultsHTML += `
            <div class="result-item error">
              <div class="result-icon"><i class="fas fa-times-circle"></i></div>
              <div style="flex: 1;">
                <strong>${result.guildName || 'Unbekannt'}</strong>
                <div style="font-size: 0.85rem; opacity: 0.7; margin-top: 0.25rem;">
                  ${result.guildId}
                </div>
                <div style="font-size: 0.85rem; color: #e74c3c; margin-top: 0.25rem;">
                  ${result.error || 'Unbekannter Fehler'}
                </div>
              </div>
            </div>
          `;
        }
      });

      resultsList.innerHTML = resultsHTML;
      modal.classList.add('active');
    }

    function closeBroadcastResultsModal() {
      document.getElementById('broadcastResultsModal').classList.remove('active');
    }

