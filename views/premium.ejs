  <style>
    /* ===== CSS Variables for Light & Dark Mode ===== */
    :root {
      --bg-color: #f0f9ff;
      --text-color: #1a1a2e;
      --text-secondary: #666;
      --border-color: #bdd7ee;
      --accent-color: #0ea5e9;
      --accent-hover: #0284c7;
      --card-bg: rgba(255, 255, 255, 0.9);
      --hero-gradient-start: #0ee9e5;
      --hero-gradient-end: #0284c7;
      --glass-bg: rgba(255, 255, 255, 0.7);
      --glass-border: rgba(14, 165, 233, 0.3);
      --shadow-color: rgba(14, 165, 233, 0.2);
      --success-color: #00ff88;
      --warning-color: #f39c12;
      --danger-color: #e74c3c;
    }

    [data-theme="dark"] {
      --bg-color: #0a0a0a;
      --text-color: #00ff88;
      --text-secondary: #999;
      --border-color: #1a3a2a;
      --accent-color: #00ff88;
      --accent-hover: #00dd77;
      --card-bg: rgba(15, 21, 16, 0.9);
      --hero-gradient-start: #0f1510;
      --hero-gradient-end: #1a3a2a;
      --glass-bg: rgba(15, 21, 16, 0.7);
      --glass-border: rgba(0, 255, 136, 0.3);
      --shadow-color: rgba(0, 255, 136, 0.2);
      --success-color: #00ff88;
      --warning-color: #f39c12;
      --danger-color: #ff4444;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html {
      scroll-behavior: smooth;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background-color: var(--bg-color);
      color: var(--text-color);
      min-height: 100vh;
      padding: 40px 20px;
      position: relative;
      transition: background-color 0.3s ease, color 0.3s ease;
    }

    /* ===== Animated Dot Pattern Background ===== */
    .animated-bg {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      background: linear-gradient(135deg, var(--hero-gradient-start) 0%, var(--hero-gradient-end) 100%);
      opacity: 0.05;
      transition: opacity 0.3s ease;
    }

    [data-theme="dark"] .animated-bg {
      opacity: 0.15;
    }

    .animated-bg::before {
      content: '';
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle, var(--accent-color) 1px, transparent 1px);
      background-size: 50px 50px;
      animation: bgMove 20s linear infinite;
      opacity: 0.3;
    }

    @keyframes bgMove {
      0% { transform: translate(0, 0); }
      100% { transform: translate(50px, 50px); }
    }

    /* ===== Theme Toggle Button ===== */
    .theme-toggle {
      position: fixed;
      top: 20px;
      right: 20px;
      z-index: 1000;
      background: var(--glass-bg);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border: 2px solid var(--glass-border);
      border-radius: 50px;
      padding: 12px 20px;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 4px 20px var(--shadow-color);
      display: flex;
      align-items: center;
      gap: 10px;
      font-weight: 600;
      color: var(--text-color);
    }

    .theme-toggle:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 30px var(--shadow-color);
    }

    .theme-toggle i {
      font-size: 1.2rem;
    }

    /* ===== Container ===== */
    .container {
      position: relative;
      z-index: 1;
      max-width: 1400px;
      margin: 0 auto;
      padding-top: 40px;
    }

    /* ===== Header Section ===== */
    .header {
      text-align: center;
      margin-bottom: 60px;
      animation: fadeInDown 0.8s ease;
    }

    @keyframes fadeInDown {
      from {
        opacity: 0;
        transform: translateY(-30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .header h1 {
      font-size: 3.5rem;
      margin-bottom: 15px;
      background: linear-gradient(135deg, var(--accent-color), var(--accent-hover));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      font-weight: 800;
    }

    .header p {
      font-size: 1.3rem;
      color: var(--text-secondary);
      font-weight: 400;
    }

    /* ===== Current Plan Box ===== */
    .current-plan {
      background: var(--glass-bg);
      backdrop-filter: blur(15px);
      -webkit-backdrop-filter: blur(15px);
      border: 2px solid var(--glass-border);
      border-radius: 20px;
      padding: 30px;
      margin-bottom: 50px;
      text-align: center;
      box-shadow: 0 8px 32px var(--shadow-color);
      transition: all 0.3s ease;
      animation: fadeIn 1s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    .current-plan:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 48px var(--shadow-color);
    }

    .current-plan h2 {
      font-size: 1.8rem;
      margin-bottom: 15px;
      color: var(--text-color);
    }

    .current-plan .badge {
      display: inline-block;
      padding: 10px 25px;
      background: linear-gradient(135deg, var(--accent-color), var(--accent-hover));
      color: white;
      border-radius: 30px;
      font-weight: bold;
      font-size: 1.1rem;
      box-shadow: 0 4px 15px var(--shadow-color);
    }

    .current-plan p {
      margin-top: 15px;
      color: var(--text-secondary);
      font-size: 1rem;
    }

    .current-plan .action-buttons {
      margin-top: 25px;
      display: flex;
      gap: 15px;
      justify-content: center;
      flex-wrap: wrap;
    }

    .current-plan .btn-action {
      padding: 12px 30px;
      border: none;
      border-radius: 10px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .current-plan .btn-action:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 25px rgba(0,0,0,0.2);
    }

    .btn-downgrade {
      background: linear-gradient(135deg, var(--warning-color), #e67e22);
      color: white;
    }

    .btn-cancel {
      background: linear-gradient(135deg, var(--danger-color), #c0392b);
      color: white;
    }

    /* ===== Billing Period Toggle ===== */
    .billing-toggle {
      text-align: center;
      margin-bottom: 50px;
      animation: fadeIn 1.2s ease;
    }

    .billing-toggle h3 {
      color: var(--text-color);
      margin-bottom: 25px;
      font-size: 1.5rem;
      font-weight: 700;
    }

    .toggle-buttons {
      display: inline-flex;
      background: var(--glass-bg);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border: 2px solid var(--glass-border);
      border-radius: 50px;
      padding: 8px;
      gap: 8px;
      box-shadow: 0 4px 20px var(--shadow-color);
    }

    .toggle-btn {
      padding: 14px 35px;
      border: none;
      background: transparent;
      color: var(--text-color);
      font-size: 1.05rem;
      font-weight: 600;
      border-radius: 50px;
      cursor: pointer;
      transition: all 0.3s ease;
      position: relative;
    }

    .toggle-btn.active {
      background: linear-gradient(135deg, var(--accent-color), var(--accent-hover));
      color: white;
      box-shadow: 0 4px 20px var(--shadow-color);
    }

    .toggle-btn:not(.active):hover {
      background: var(--glass-border);
    }

    .savings-badge {
      display: inline-block;
      background: var(--success-color);
      color: #000;
      padding: 4px 12px;
      border-radius: 15px;
      font-size: 0.75rem;
      font-weight: bold;
      margin-left: 8px;
      animation: pulse 2s ease-in-out infinite;
    }

    @keyframes pulse {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.05); }
    }

    /* ===== Pricing Cards Grid ===== */
    .pricing-cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
      gap: 35px;
      margin-bottom: 50px;
      animation: fadeInUp 1s ease;
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* ===== Individual Pricing Card ===== */
    .pricing-card {
      background: var(--glass-bg);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 2px solid var(--glass-border);
      border-radius: 25px;
      padding: 45px 35px;
      box-shadow: 0 10px 40px var(--shadow-color);
      position: relative;
      transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
      overflow: hidden;
    }

    .pricing-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 5px;
      background: linear-gradient(90deg, var(--accent-color), var(--accent-hover));
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .pricing-card:hover {
      transform: translateY(-15px) scale(1.02);
      box-shadow: 0 20px 60px var(--shadow-color);
      border-color: var(--accent-color);
    }

    .pricing-card:hover::before {
      opacity: 1;
    }

    .pricing-card.popular {
      border: 3px solid var(--accent-color);
      transform: scale(1.05);
      box-shadow: 0 15px 50px var(--shadow-color);
    }

    .pricing-card.popular::after {
      content: '‚≠ê BELIEBT';
      position: absolute;
      top: -15px;
      right: 20px;
      background: linear-gradient(135deg, var(--accent-color), var(--accent-hover));
      color: white;
      padding: 6px 20px;
      border-radius: 20px;
      font-size: 0.8rem;
      font-weight: bold;
      box-shadow: 0 4px 15px var(--shadow-color);
    }

    .pricing-card.current {
      opacity: 0.7;
      pointer-events: none;
    }

    .tier-icon {
      font-size: 3rem;
      margin-bottom: 20px;
      display: block;
      text-align: center;
      filter: drop-shadow(0 4px 10px var(--shadow-color));
    }

    .tier-name {
      font-size: 2.2rem;
      font-weight: 800;
      margin-bottom: 15px;
      color: var(--text-color);
      text-align: center;
    }

    .tier-price {
      font-size: 3.5rem;
      font-weight: 900;
      color: var(--accent-color);
      margin-bottom: 10px;
      text-align: center;
      line-height: 1;
    }

    .tier-price .currency {
      font-size: 2rem;
      vertical-align: super;
    }

    .price-period {
      font-size: 1.1rem;
      color: var(--text-secondary);
      font-weight: normal;
    }

    .tier-description {
      color: var(--text-secondary);
      margin-bottom: 35px;
      font-size: 1rem;
      text-align: center;
      font-weight: 500;
    }

    /* ===== Features List ===== */
    .features-list {
      list-style: none;
      margin-bottom: 35px;
    }

    .features-list li {
      padding: 15px 0;
      border-bottom: 1px solid var(--glass-border);
      color: var(--text-color);
      display: flex;
      align-items: center;
      gap: 12px;
      font-size: 1rem;
      transition: all 0.3s ease;
    }

    .features-list li:hover {
      padding-left: 10px;
      color: var(--accent-color);
    }

    .features-list li:last-child {
      border-bottom: none;
    }

    .features-list li::before {
      content: '‚úì';
      display: flex;
      align-items: center;
      justify-content: center;
      width: 28px;
      height: 28px;
      background: linear-gradient(135deg, var(--accent-color), var(--accent-hover));
      color: white;
      border-radius: 50%;
      font-weight: bold;
      flex-shrink: 0;
      box-shadow: 0 2px 10px var(--shadow-color);
    }

    .features-list li strong {
      color: var(--accent-color);
      font-weight: 700;
    }

    /* ===== Buttons ===== */
    .btn-purchase {
      width: 100%;
      padding: 18px;
      background: linear-gradient(135deg, var(--accent-color), var(--accent-hover));
      color: white;
      border: none;
      border-radius: 12px;
      font-size: 1.2rem;
      font-weight: bold;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 6px 25px var(--shadow-color);
      position: relative;
      overflow: hidden;
    }

    .btn-purchase::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.2);
      transform: translate(-50%, -50%);
      transition: width 0.6s, height 0.6s;
    }

    .btn-purchase:hover::before {
      width: 300px;
      height: 300px;
    }

    .btn-purchase:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 40px var(--shadow-color);
    }

    .btn-purchase:active {
      transform: translateY(-1px);
    }

    .btn-purchase:disabled {
      background: linear-gradient(135deg, #ccc, #999);
      cursor: not-allowed;
      transform: none;
      box-shadow: none;
    }

    .current-badge,
    .free-badge {
      display: inline-block;
      padding: 12px 25px;
      border-radius: 10px;
      font-size: 1rem;
      font-weight: bold;
      width: 100%;
      text-align: center;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .current-badge {
      background: linear-gradient(135deg, #2196F3, #1976D2);
      color: white;
    }

    .free-badge {
      background: linear-gradient(135deg, #4CAF50, #388E3C);
      color: white;
    }

    /* ===== Back Link Section ===== */
    .back-link {
      text-align: center;
      margin-top: 50px;
      display: flex;
      gap: 20px;
      justify-content: center;
      flex-wrap: wrap;
      animation: fadeIn 1.5s ease;
    }

    .btn-back {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      padding: 15px 35px;
      background: var(--glass-bg);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border: 2px solid var(--glass-border);
      color: var(--text-color);
      text-decoration: none;
      border-radius: 12px;
      font-weight: 600;
      font-size: 1.05rem;
      transition: all 0.3s ease;
      box-shadow: 0 4px 20px var(--shadow-color);
    }

    .btn-back:hover {
      background: var(--accent-color);
      color: white;
      transform: translateY(-3px);
      box-shadow: 0 8px 30px var(--shadow-color);
      border-color: var(--accent-color);
    }

    .btn-discord {
      background: linear-gradient(135deg, #5865F2, #4752C4);
      border-color: rgba(88, 101, 242, 0.5);
      color: white;
    }

    .btn-discord:hover {
      background: linear-gradient(135deg, #4752C4, #3C45A5);
      color: white;
    }

    /* ===== Loading Overlay ===== */
    .loading-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.95);
      display: none;
      justify-content: center;
      align-items: center;
      z-index: 99999;
      flex-direction: column;
      gap: 2rem;
    }

    .loading-overlay.show {
      display: flex;
    }

    .loading-content {
      text-align: center;
      background: var(--glass-bg);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      padding: 3rem;
      border-radius: 25px;
      border: 2px solid var(--glass-border);
      max-width: 450px;
      width: 90%;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    }

    .loading-spinner {
      width: 70px;
      height: 70px;
      border: 8px solid rgba(14, 165, 233, 0.1);
      border-top: 8px solid var(--accent-color);
      border-radius: 50%;
      animation: loadingSpin 1s linear infinite;
      margin: 0 auto 2rem;
    }

    @keyframes loadingSpin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .loading-text {
      font-size: 1.5rem;
      color: var(--accent-color);
      font-weight: 700;
      margin-bottom: 0.5rem;
    }

    .loading-subtext {
      font-size: 1rem;
      opacity: 0.8;
      color: var(--text-secondary);
    }

    /* ===== Responsive Design ===== */
    @media (max-width: 768px) {
      body {
        padding: 20px 15px;
      }

      .container {
        padding-top: 20px;
      }

      .header h1 {
        font-size: 2.5rem;
      }

      .header p {
        font-size: 1.1rem;
      }

      .pricing-card.popular {
        transform: scale(1);
      }

      .pricing-card:hover {
        transform: translateY(-10px);
      }

      .pricing-cards {
        grid-template-columns: 1fr;
        gap: 25px;
      }

      .toggle-buttons {
        flex-direction: column;
        width: 100%;
        max-width: 320px;
      }

      .toggle-btn {
        width: 100%;
      }

      .theme-toggle {
        top: 15px;
        right: 15px;
        padding: 10px 18px;
      }

      .tier-price {
        font-size: 3rem;
      }

      .back-link {
        flex-direction: column;
        gap: 15px;
      }

      .btn-back {
        width: 100%;
        justify-content: center;
      }
    }

    @media (max-width: 480px) {
      .header h1 {
        font-size: 2rem;
      }

      .pricing-card {
        padding: 35px 25px;
      }

      .tier-name {
        font-size: 1.8rem;
      }

      .tier-price {
        font-size: 2.5rem;
      }
    }
  </style>
</head>
