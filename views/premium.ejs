  <script>
    // ===== Theme Management =====
    function toggleTheme() {
      const html = document.documentElement;
      const currentTheme = html.getAttribute('data-theme');
      const newTheme = currentTheme === 'light' ? 'dark' : 'light';

      html.setAttribute('data-theme', newTheme);
      localStorage.setItem('theme', newTheme);

      updateThemeButton(newTheme);
    }

    function updateThemeButton(theme) {
      const icon = document.getElementById('theme-icon');
      const text = document.getElementById('theme-text');

      if (theme === 'dark') {
        icon.className = 'fas fa-sun';
        text.textContent = 'Light Mode';
      } else {
        icon.className = 'fas fa-moon';
        text.textContent = 'Dark Mode';
      }
    }

    // Load saved theme on page load
    window.addEventListener('DOMContentLoaded', () => {
      const savedTheme = localStorage.getItem('theme') || 'light';
      document.documentElement.setAttribute('data-theme', savedTheme);
      updateThemeButton(savedTheme);
    });

    // ===== Billing Period Toggle =====
    let currentBillingPeriod = 'monthly';

    function toggleBillingPeriod(period) {
      currentBillingPeriod = period;

      // Update toggle button states
      document.getElementById('toggle-monthly').classList.toggle('active', period === 'monthly');
      document.getElementById('toggle-yearly').classList.toggle('active', period === 'yearly');

      // Update all price displays
      document.querySelectorAll('.price-monthly').forEach(el => {
        el.style.display = period === 'monthly' ? 'inline' : 'none';
      });
      document.querySelectorAll('.price-yearly').forEach(el => {
        el.style.display = period === 'yearly' ? 'inline' : 'none';
      });

      // Update price period text
      document.querySelectorAll('.price-period').forEach(el => {
        el.textContent = period === 'monthly' ? '/Monat' : '/Jahr';
      });

      // Update all hidden billing period inputs in forms
      document.querySelectorAll('.billing-period-input').forEach(input => {
        input.value = period;
      });

      console.log(`Billing period changed to: ${period}`);
    }

    // ===== Loading Overlay Functions =====
    function showLoading(text) {
      const overlay = document.getElementById('loadingOverlay');
      const loadingText = document.getElementById('loadingText');

      loadingText.textContent = text;
      overlay.classList.add('show');
    }

    // Prevent double-submission and show loading animations
    document.querySelectorAll('form').forEach(form => {
      form.addEventListener('submit', function(e) {
        const btn = this.querySelector('button[type="submit"]');
        const action = this.getAttribute('action');

        // Determine loading text based on action
        let loadingMsg = 'Wird geladen...';
        if (action === '/purchase-premium') {
          loadingMsg = 'Weiterleitung zu Stripe...';
        } else if (action === '/downgrade-premium') {
          loadingMsg = 'Downgrade wird durchgef√ºhrt...';
        } else if (action === '/cancel-premium') {
          loadingMsg = 'Premium wird gek√ºndigt...';
        }

        showLoading(loadingMsg);
        btn.disabled = true;
      });
    });

    // Loading animation for back button
    const backBtns = document.querySelectorAll('.btn-back');
    backBtns.forEach(btn => {
      btn.addEventListener('click', function(e) {
        // Don't prevent default for external links
        if (this.hasAttribute('target')) return;

        e.preventDefault();
        const href = this.getAttribute('href');

        showLoading('Zur√ºck zum Panel...');

        setTimeout(() => {
          window.location.href = href;
        }, 300);
      });
    });
  </script>
