  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Premium - Quantix Tickets Bot</title>
  <!-- Favicon -->
  <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/images/favicon.png">
  <link rel="shortcut icon" href="/images/favicon.png">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
      min-height: 100vh;
      padding: 40px 20px;
      position: relative;
    }

    /* Animated Background Pattern */
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 0;
      background: radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px);
      background-size: 50px 50px;
      opacity: 0.3;
      animation: bgMove 20s linear infinite;
      pointer-events: none;
    }

    @keyframes bgMove {
      0% { transform: translate(0, 0); }
      100% { transform: translate(50px, 50px); }
    }

    .container {
      position: relative;
      z-index: 1;
      max-width: 1200px;
      margin: 0 auto;
    }

    .header {
      text-align: center;
      color: white;
      margin-bottom: 60px;
    }

    .header h1 {
      font-size: 3rem;
      margin-bottom: 10px;
    }

    .header p {
      font-size: 1.2rem;
      opacity: 0.9;
    }

    .current-plan {
      background: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(15px);
      -webkit-backdrop-filter: blur(15px);
      border: 2px solid rgba(255, 255, 255, 0.2);
      border-radius: 15px;
      padding: 20px;
      margin-bottom: 40px;
      color: white;
      text-align: center;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
    }

    .current-plan:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
    }

    .current-plan h2 {
      font-size: 1.5rem;
      margin-bottom: 10px;
    }

    .current-plan .badge {
      display: inline-block;
      padding: 8px 20px;
      background: rgba(255, 255, 255, 0.2);
      border-radius: 20px;
      font-weight: bold;
    }

    .pricing-cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: 30px;
      margin-bottom: 40px;
    }

    .pricing-card {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 2px solid rgba(255, 255, 255, 0.3);
      border-radius: 20px;
      padding: 40px 30px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
      position: relative;
      transition: all 0.3s ease;
    }

    .pricing-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 15px 50px rgba(0, 0, 0, 0.3);
      border-color: rgba(14, 165, 233, 0.5);
    }

    .pricing-card.popular {
      border: 3px solid #0ea5e9;
      transform: scale(1.05);
    }

    .pricing-card.popular::before {
      content: '‚≠ê BELIEBT';
      position: absolute;
      top: -15px;
      left: 50%;
      transform: translateX(-50%);
      background: #0ea5e9;
      color: white;
      padding: 5px 20px;
      border-radius: 20px;
      font-size: 0.8rem;
      font-weight: bold;
    }

    .pricing-card.current {
      opacity: 0.7;
      pointer-events: none;
    }

    .tier-name {
      font-size: 2rem;
      font-weight: bold;
      margin-bottom: 10px;
      color: #333;
    }

    .tier-price {
      font-size: 3rem;
      font-weight: bold;
      color: #0ea5e9;
      margin-bottom: 5px;
    }

    .tier-price span {
      font-size: 1.2rem;
      color: #666;
    }

    .tier-description {
      color: #666;
      margin-bottom: 30px;
      font-size: 0.95rem;
    }

    .features-list {
      list-style: none;
      margin-bottom: 30px;
    }

    .features-list li {
      padding: 12px 0;
      border-bottom: 1px solid #f0f0f0;
      color: #555;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .features-list li:last-child {
      border-bottom: none;
    }

    .features-list li::before {
      content: '‚úì';
      display: inline-block;
      width: 25px;
      height: 25px;
      background: #0ea5e9;
      color: white;
      border-radius: 50%;
      text-align: center;
      line-height: 25px;
      font-weight: bold;
      flex-shrink: 0;
    }

    .btn-purchase {
      width: 100%;
      padding: 15px;
      background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
      color: white;
      border: none;
      border-radius: 10px;
      font-size: 1.1rem;
      font-weight: bold;
      cursor: pointer;
      transition: transform 0.2s ease;
    }

    .btn-purchase:hover {
      transform: scale(1.05);
    }

    .btn-purchase:disabled {
      background: #ccc;
      cursor: not-allowed;
      transform: none;
    }

    .btn-back {
      display: inline-block;
      padding: 12px 30px;
      background: rgba(255, 255, 255, 0.2);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border: 2px solid rgba(255, 255, 255, 0.3);
      color: white;
      text-decoration: none;
      border-radius: 10px;
      margin-top: 20px;
      transition: all 0.3s ease;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    }

    .btn-back:hover {
      background: rgba(255, 255, 255, 0.3);
      transform: translateY(-2px);
      box-shadow: 0 6px 24px rgba(0, 0, 0, 0.15);
    }

    .back-link {
      text-align: center;
      margin-top: 40px;
    }

    .free-badge {
      display: inline-block;
      background: #4CAF50;
      color: white;
      padding: 5px 15px;
      border-radius: 5px;
      font-size: 0.9rem;
      margin-top: 10px;
    }

    .current-badge {
      display: inline-block;
      background: #2196F3;
      color: white;
      padding: 5px 15px;
      border-radius: 5px;
      font-size: 0.9rem;
      margin-top: 10px;
    }

    @media (max-width: 768px) {
      .header h1 {
        font-size: 2rem;
      }

      .pricing-card.popular {
        transform: scale(1);
      }
    }

    /* Loading Overlay */
    .loading-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,0.95);
      display: none;
      justify-content: center;
      align-items: center;
      z-index: 99999;
      flex-direction: column;
      gap: 2rem;
    }

    .loading-overlay.show {
      display: flex;
    }

    .loading-content {
      text-align: center;
      background: rgba(255,255,255,0.05);
      padding: 3rem;
      border-radius: 20px;
      border: 1px solid rgba(14, 165, 233, 0.3);
      max-width: 400px;
      width: 90%;
    }

    .loading-spinner {
      width: 60px;
      height: 60px;
      border: 6px solid rgba(14, 165, 233, 0.1);
      border-top: 6px solid #0ea5e9;
      border-radius: 50%;
      animation: loadingSpin 1s linear infinite;
      margin: 0 auto 2rem;
    }

    .loading-text {
      font-size: 1.3rem;
      color: #0ea5e9;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    .loading-subtext {
      font-size: 0.9rem;
      opacity: 0.7;
      color: white;
    }

    @keyframes loadingSpin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    /* Billing Period Toggle */
    .billing-toggle {
      text-align: center;
      margin-bottom: 40px;
    }

    .billing-toggle h3 {
      color: white;
      margin-bottom: 20px;
      font-size: 1.3rem;
    }

    .toggle-buttons {
      display: inline-flex;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border: 2px solid rgba(255, 255, 255, 0.2);
      border-radius: 50px;
      padding: 5px;
      gap: 5px;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    }

    .toggle-btn {
      padding: 12px 30px;
      border: none;
      background: transparent;
      color: white;
      font-size: 1rem;
      font-weight: 600;
      border-radius: 50px;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .toggle-btn.active {
      background: white;
      color: #0ea5e9;
      box-shadow: 0 4px 15px rgba(255, 255, 255, 0.3);
    }

    .toggle-btn:not(.active):hover {
      background: rgba(255, 255, 255, 0.1);
    }

    .savings-badge {
      display: inline-block;
      background: #00ff88;
      color: #000;
      padding: 4px 12px;
      border-radius: 15px;
      font-size: 0.8rem;
      font-weight: bold;
      margin-left: 10px;
    }

    .price-period {
      font-size: 1rem;
      color: #999;
      font-weight: normal;
    }

    @media (max-width: 768px) {
      .toggle-buttons {
        flex-direction: column;
        width: 100%;
        max-width: 300px;
      }

      .toggle-btn {
        width: 100%;
      }
    }
  </style>
</head>
<body>
  <!-- Loading Overlay -->
  <div class="loading-overlay" id="loadingOverlay">
    <div class="loading-content">
      <div class="loading-spinner"></div>
      <div class="loading-text" id="loadingText">Wird geladen...</div>
      <div class="loading-subtext">Bitte warten</div>
    </div>
  </div>

  <div class="container">
    <div class="header">
      <h1>üíé Premium Upgrade</h1>
      <p>Schalte exklusive Features frei und unterst√ºtze die Entwicklung!</p>
    </div>

    <% if (currentTier !== 'none') { %>
    <div class="current-plan">
      <h2>Dein aktueller Plan</h2>
      <div class="badge"><%= currentTierName %></div>
      <% if (expiresAt) { %>
        <p style="margin-top: 10px; font-size: 0.9rem;">
          Verl√§ngert sich automatisch am <%= new Date(expiresAt).toLocaleDateString('de-DE') %>
        </p>
      <% } %>

      <div style="margin-top: 20px; display: flex; gap: 15px; justify-content: center; flex-wrap: wrap;">
        <% if (currentTier === 'pro') { %>
          <form action="/downgrade-premium" method="POST" style="margin: 0;">
            <button type="submit" class="btn-purchase" style="background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%); width: auto; padding: 12px 30px; font-size: 1rem;" onclick="return confirm('M√∂chtest du wirklich von Pro zu Basic downgraden? Du verlierst Zugriff auf Pro-Features.');">
              ‚¨áÔ∏è Zu Basic downgraden
            </button>
          </form>
        <% } %>

        <form action="/cancel-premium" method="POST" style="margin: 0;">
          <button type="submit" class="btn-purchase" style="background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%); width: auto; padding: 12px 30px; font-size: 1rem;" onclick="return confirm('M√∂chtest du dein Premium-Abo wirklich k√ºndigen? Du verlierst alle Premium-Features.');">
            üö´ Premium k√ºndigen
          </button>
        </form>
      </div>
    </div>
    <% } %>

    <!-- Billing Period Toggle -->
    <div class="billing-toggle">
      <h3>Abrechnungszeitraum w√§hlen</h3>
      <div class="toggle-buttons">
        <button type="button" class="toggle-btn active" id="toggle-monthly" onclick="toggleBillingPeriod('monthly')">
          Monatlich
        </button>
        <button type="button" class="toggle-btn" id="toggle-yearly" onclick="toggleBillingPeriod('yearly')">
          J√§hrlich <span class="savings-badge">Spare bis zu 17%</span>
        </button>
      </div>
    </div>

    <div class="pricing-cards">
      <!-- Free Tier -->
      <div class="pricing-card <%= currentTier === 'none' ? 'current' : '' %>">
        <div class="tier-name">Free</div>
        <div class="tier-price">‚Ç¨0<span>/Monat</span></div>
        <div class="tier-description">F√ºr kleine Server zum Testen</div>

        <ul class="features-list">
          <li>3 Ticket-Kategorien</li>
          <li>Basic Ticket-System</li>
          <li>Multi-Server Support</li>
          <li>Priority-Rollen System</li>
          <li>Web-Dashboard</li>
        </ul>

        <% if (currentTier === 'none') { %>
          <div class="current-badge">‚úì Aktueller Plan</div>
        <% } else { %>
          <button class="btn-purchase" disabled>Aktueller Plan</button>
        <% } %>
      </div>

      <!-- Basic Tier -->
      <div class="pricing-card <%= currentTier === 'basic' ? 'current' : '' %>">
        <div class="tier-name">Premium Basic</div>
        <div class="tier-price">
          <span class="price-monthly">‚Ç¨2.99</span>
          <span class="price-yearly" style="display: none;">‚Ç¨29.99</span>
          <span class="price-period">/Monat</span>
        </div>
        <div class="tier-description">Perfekt f√ºr aktive Server</div>

        <ul class="features-list">
          <li><strong>Alles von Free +</strong></li>
          <li>üö´ Werbefrei</li>
          <li>üé® Custom Bot-Avatar</li>
          <li>üìä Ticket-Statistiken</li>
          <li>‚ö° Priority Support</li>
          <li>7 Ticket-Kategorien</li>
        </ul>

        <% if (currentTier === 'basic') { %>
          <div class="current-badge">‚úì Aktueller Plan</div>
        <% } else if (currentTier === 'pro') { %>
          <form action="/downgrade-premium" method="POST">
            <button type="submit" class="btn-purchase" style="background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);" onclick="return confirm('M√∂chtest du wirklich von Pro zu Basic downgraden?');">
              ‚¨áÔ∏è Zu Basic downgraden
            </button>
          </form>
        <% } else { %>
          <form action="/purchase-premium" method="POST" class="premium-form">
            <input type="hidden" name="tier" value="basic">
            <input type="hidden" name="guildId" value="<%= guildId %>">
            <input type="hidden" name="billingPeriod" value="monthly" class="billing-period-input">
            <button type="submit" class="btn-purchase">Jetzt upgraden</button>
          </form>
        <% } %>
      </div>

      <!-- Pro Tier -->
      <div class="pricing-card popular <%= currentTier === 'pro' ? 'current' : '' %>">
        <div class="tier-name">Premium Pro</div>
        <div class="tier-price">
          <span class="price-monthly">‚Ç¨4.99</span>
          <span class="price-yearly" style="display: none;">‚Ç¨49.99</span>
          <span class="price-period">/Monat</span>
        </div>
        <div class="tier-description">F√ºr professionelle Teams</div>

        <ul class="features-list">
          <li><strong>Alles von Basic +</strong></li>
          <li>‚è∞ Auto-Close nach X Tagen</li>
          <li>üìß Email-Benachrichtigungen</li>
          <li>‚ôæÔ∏è Unbegrenzte Kategorien</li>
          <li>üîî Discord DM-Benachrichtigungen</li>
          <li>üìà Erweiterte Analytics</li>
        </ul>

        <% if (currentTier === 'pro') { %>
          <div class="current-badge">‚úì Aktueller Plan</div>
        <% } else { %>
          <form action="/purchase-premium" method="POST" class="premium-form">
            <input type="hidden" name="tier" value="pro">
            <input type="hidden" name="guildId" value="<%= guildId %>">
            <input type="hidden" name="billingPeriod" value="monthly" class="billing-period-input">
            <button type="submit" class="btn-purchase">Jetzt upgraden</button>
          </form>
        <% } %>
      </div>
    </div>

    <div class="back-link" style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
      <a href="/panel?guild=<%= guildId %>" class="btn-back">‚Üê Zur√ºck zum Dashboard</a>
      <a href="https://discord.com/invite/mnYbnpyyBS" target="_blank" class="btn-back" style="background: #5865F2; border-color: rgba(88, 101, 242, 0.5);">
        <i class="fab fa-discord"></i> Support Server
      </a>
    </div>
  </div>

  <script>
    // Global billing period state
    let currentBillingPeriod = 'monthly';

    // Toggle billing period function
    function toggleBillingPeriod(period) {
      currentBillingPeriod = period;

      // Update toggle button states
      document.getElementById('toggle-monthly').classList.toggle('active', period === 'monthly');
      document.getElementById('toggle-yearly').classList.toggle('active', period === 'yearly');

      // Update all price displays
      document.querySelectorAll('.price-monthly').forEach(el => {
        el.style.display = period === 'monthly' ? 'inline' : 'none';
      });
      document.querySelectorAll('.price-yearly').forEach(el => {
        el.style.display = period === 'yearly' ? 'inline' : 'none';
      });

      // Update price period text
      document.querySelectorAll('.price-period').forEach(el => {
        el.textContent = period === 'monthly' ? '/Monat' : '/Jahr';
      });

      // Update all hidden billing period inputs in forms
      document.querySelectorAll('.billing-period-input').forEach(input => {
        input.value = period;
      });

      console.log(`Billing period changed to: ${period}`);
    }

    // Loading Overlay Functions
    function showLoading(text) {
      const overlay = document.getElementById('loadingOverlay');
      const loadingText = document.getElementById('loadingText');

      loadingText.textContent = text;
      overlay.classList.add('show');
    }

    // Prevent double-submission and show loading animations
    document.querySelectorAll('form').forEach(form => {
      form.addEventListener('submit', function(e) {
        const btn = this.querySelector('button[type="submit"]');
        const action = this.getAttribute('action');

        // Determine loading text based on action
        let loadingMsg = 'Wird geladen...';
        if (action === '/purchase-premium') {
          loadingMsg = 'Weiterleitung zu Stripe...';
        } else if (action === '/downgrade-premium') {
          loadingMsg = 'Downgrade wird durchgef√ºhrt...';
        } else if (action === '/cancel-premium') {
          loadingMsg = 'Premium wird gek√ºndigt...';
        }

        showLoading(loadingMsg);
        btn.disabled = true;
      });
    });

    // Loading animation for back button
    const backBtn = document.querySelector('.btn-back');
    if (backBtn) {
      backBtn.addEventListener('click', function(e) {
        e.preventDefault();
        const href = this.getAttribute('href');

        showLoading('Zur√ºck zum Panel...');

        setTimeout(() => {
          window.location.href = href;
        }, 100);
      });
    }
  </script>
  <script src="/js/auth-session.js"></script>
</body>
</html>
