      .grid-2,
      .grid-3 {
        grid-template-columns: 1fr;
      }

      .save-button-fixed {
        bottom: 5rem;
      }
    }

    @media (max-width: 768px) {
      .tabs-nav {
        flex-wrap: nowrap;
        overflow-x: auto;
      }

      .tab-btn {
        font-size: 0.85rem;
        padding: 0.65rem 1.25rem;
      }

      .content-title {
        font-size: 1.5rem;
      }

      .card {
        padding: 1.25rem;
      }

      .content-header {
        margin-top: 6rem; /* Noch mehr Platz auf Mobile */
      }

      .lang-dropdown {
        right: 4.5rem; /* Weniger Abstand auf Mobile */
      }

      .theme-toggle {
        right: 1rem;
      }
    }

    @media (max-width: 480px) {
      .content-header {
        margin-top: 7rem; /* Extra Platz auf sehr kleinen Bildschirmen */
      }

      .lang-dropdown {
        right: 3.5rem;
        max-width: calc(100% - 7rem);
      }

      .lang-dropdown-toggle {
        padding: 0.5rem 0.75rem;
        font-size: 0.85rem;
      }

      .header-actions .btn {
        font-size: 0.85rem;
        padding: 0.5rem 0.75rem;
      }
    }

    /* Dark Mode Overrides */
    [data-theme="dark"] input,
    [data-theme="dark"] select,
    [data-theme="dark"] textarea {
      background-color: rgba(15, 21, 16, 0.9);
      border-color: var(--border-color);
      color: var(--text-color);
    }

    [data-theme="dark"] .card,
    [data-theme="dark"] .stats-card,
    [data-theme="dark"] .server-info,
    [data-theme="dark"] .topic-item {
      background: rgba(15, 21, 16, 0.7);
      border-color: var(--glass-border);
    }

    [data-theme="dark"] .preview-card {
      background: rgba(10, 15, 12, 0.8);
    }

    [data-theme="dark"] select[multiple] option:checked {
      background: var(--accent-color);
      color: #000;
    }

    /* Custom Confirmation Dialog */
    .confirm-overlay {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.7);
      backdrop-filter: blur(5px);
      display: none;
      align-items: center;
      justify-content: center;
      z-index: 10000;
      animation: fadeIn 0.2s ease;
    }

    .confirm-overlay.show {
      display: flex;
    }

    .confirm-dialog {
      background: var(--glass-bg);
      backdrop-filter: blur(20px);
      border: 1px solid var(--glass-border);
      border-radius: 16px;
      padding: 2rem;
      max-width: 450px;
      width: 90%;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      animation: slideUp 0.3s ease;
      text-align: center;
    }

    @keyframes slideUp {
      from {
        transform: translateY(20px);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }

    .confirm-icon {
      width: 70px;
      height: 70px;
      background: linear-gradient(135deg, #667eea, #764ba2);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
      font-size: 1.8rem;
      color: white;
      box-shadow: 0 8px 24px rgba(102, 126, 234, 0.4);
    }

    .confirm-title {
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--text-color);
      margin-bottom: 0.75rem;
    }

    .confirm-message {
      font-size: 1rem;
      color: var(--text-secondary);
      margin-bottom: 2rem;
      line-height: 1.6;
    }

    .confirm-buttons {
      display: flex;
      gap: 1rem;
      justify-content: center;
    }

    .confirm-buttons .btn {
      min-width: 120px;
      padding: 0.75rem 1.5rem;
      font-size: 0.95rem;
    }

    [data-theme="dark"] .confirm-dialog {
      background: rgba(15, 21, 16, 0.95);
      border-color: rgba(0, 255, 136, 0.3);
    }

    /* Custom Scrollbar */
    ::-webkit-scrollbar {
      width: 10px;
    }

    ::-webkit-scrollbar-track {
      background: var(--bg-secondary);
    }

    ::-webkit-scrollbar-thumb {
      background: var(--accent-color);
      border-radius: 5px;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: var(--accent-hover);
    }
  </style>
</head>
