    function uploadBackup(input) {
      const file = input.files[0];
      if (!file) return;

      if (!confirm('<%= lang === "de" ? "M√∂chtest du wirklich das Backup wiederherstellen? Die aktuelle Konfiguration wird √ºberschrieben." : "Do you really want to restore the backup? The current configuration will be overwritten." %>')) {
        input.value = '';
        return;
      }

      const reader = new FileReader();
      reader.onload = async (e) => {
        try {
          const backup = JSON.parse(e.target.result);
          const response = await fetch('/api/backup/upload/<%= guildId %>', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(backup)
          });

          if (response.ok) {
            alert('<%= lang === "de" ? "Backup erfolgreich wiederhergestellt!" : "Backup successfully restored!" %>');
            location.reload();
          } else {
            const error = await response.json();
            alert('<%= lang === "de" ? "Fehler: " : "Error: " %>' + (error.error || '<%= lang === "de" ? "Unbekannter Fehler" : "Unknown error" %>'));
          }
        } catch (err) {
          alert('<%= lang === "de" ? "Fehler beim Lesen der Backup-Datei: " : "Error reading backup file: " %>' + err.message);
        }
        input.value = '';
      };
      reader.readAsText(file);
    }

