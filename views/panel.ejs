  <style>
    /* ============================================================
     * MODERN TAB-BASED PANEL DESIGN
     * ============================================================ */

    /* CSS Variables - Modern & Creative Design */
    :root {
      /* Backgrounds - Moderne Gradienten */
      --bg-color: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
      --bg-secondary: #f8fafc;
      --bg-card: rgba(255, 255, 255, 0.85);

      /* Text Colors */
      --text-color: #0f172a;
      --text-secondary: #64748b;
      --text-muted: #94a3b8;

      /* Accent Colors - Vibrant Gradients */
      --accent-gradient: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #d946ef 100%);
      --accent-color: #6366f1;
      --accent-hover: #8b5cf6;
      --accent-light: #eef2ff;

      /* Status Colors */
      --success-color: #10b981;
      --success-light: #d1fae5;
      --warning-color: #f59e0b;
      --warning-light: #fef3c7;
      --error-color: #ef4444;
      --error-light: #fee2e2;
      --info-color: #3b82f6;
      --info-light: #dbeafe;

      /* Glassmorphism */
      --glass-bg: rgba(255, 255, 255, 0.75);
      --glass-bg-solid: rgba(255, 255, 255, 0.95);
      --glass-border: rgba(203, 213, 225, 0.3);
      --glass-shadow: 0 8px 32px 0 rgba(100, 116, 139, 0.1);

      /* Shadows - Softer & More Depth */
      --shadow-sm: 0 1px 3px 0 rgba(0, 0, 0, 0.05);
      --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.07);
      --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.08);
      --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
      --shadow-glow: 0 0 20px rgba(99, 102, 241, 0.3);

      /* Layout */
      --sidebar-width: 280px;
      --header-height: 70px;
      --border-radius: 16px;
      --border-radius-sm: 12px;
      --transition-speed: 0.3s;
    }

    [data-theme="dark"] {
      /* Backgrounds - Dark Mode mit Tiefe */
      --bg-color: linear-gradient(135deg, #0a0a0f 0%, #13131a 100%);
      --bg-secondary: #1a1a24;
      --bg-card: rgba(20, 20, 30, 0.85);

      /* Text Colors */
      --text-color: #e2e8f0;
      --text-secondary: #94a3b8;
      --text-muted: #64748b;

      /* Accent Colors - Neon Glow */
      --accent-gradient: linear-gradient(135deg, #818cf8 0%, #a78bfa 50%, #e879f9 100%);
      --accent-color: #818cf8;
      --accent-hover: #a78bfa;
      --accent-light: #312e81;

      /* Status Colors - Dark Mode */
      --success-color: #34d399;
      --success-light: #064e3b;
      --warning-color: #fbbf24;
      --warning-light: #78350f;
      --error-color: #f87171;
      --error-light: #7f1d1d;
      --info-color: #60a5fa;
      --info-light: #1e3a8a;

      /* Glassmorphism - Dark */
      --glass-bg: rgba(20, 20, 30, 0.75);
      --glass-bg-solid: rgba(20, 20, 30, 0.95);
      --glass-border: rgba(148, 163, 184, 0.1);
      --glass-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.3);

      /* Shadows - Dark Mode with Glow */
      --shadow-sm: 0 1px 3px 0 rgba(0, 0, 0, 0.3);
      --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.4);
      --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.5);
      --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.6);
      --shadow-glow: 0 0 30px rgba(129, 140, 248, 0.4);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Inter', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background: var(--bg-color);
      color: var(--text-color);
      min-height: 100vh;
      position: relative;
      overflow-x: hidden;
      font-size: 15px;
      line-height: 1.6;
    }

    /* Animated Background - Mesh Gradient */
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background:
        radial-gradient(circle at 10% 20%, rgba(99, 102, 241, 0.08) 0%, transparent 40%),
        radial-gradient(circle at 90% 10%, rgba(139, 92, 246, 0.08) 0%, transparent 40%),
        radial-gradient(circle at 50% 90%, rgba(217, 70, 239, 0.06) 0%, transparent 40%),
        radial-gradient(circle at 20% 80%, rgba(59, 130, 246, 0.04) 0%, transparent 40%);
      animation: meshMove 20s ease-in-out infinite alternate;
      pointer-events: none;
      z-index: 0;
    }

    @keyframes meshMove {
      0% {
        transform: translateY(0) scale(1);
        opacity: 1;
      }
      50% {
        transform: translateY(-20px) scale(1.05);
        opacity: 0.8;
      }
      100% {
        transform: translateY(0) scale(1);
        opacity: 1;
      }
    }

    /* Dark Mode: Animated Dots Pattern */
    [data-theme="dark"] body::before {
      background:
        radial-gradient(circle at 10% 20%, rgba(129, 140, 248, 0.1) 0%, transparent 40%),
        radial-gradient(circle at 90% 10%, rgba(167, 139, 250, 0.1) 0%, transparent 40%),
        radial-gradient(circle at 50% 90%, rgba(232, 121, 249, 0.08) 0%, transparent 40%);
    }

    /* Subtle Grid Pattern */
    body::after {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image:
        linear-gradient(rgba(99, 102, 241, 0.02) 1px, transparent 1px),
        linear-gradient(90deg, rgba(99, 102, 241, 0.02) 1px, transparent 1px);
      background-size: 50px 50px;
      pointer-events: none;
      z-index: 0;
    }

    [data-theme="dark"] body::after {
      background-image:
        linear-gradient(rgba(129, 140, 248, 0.03) 1px, transparent 1px),
        linear-gradient(90deg, rgba(129, 140, 248, 0.03) 1px, transparent 1px);
    }

    /* Layout */
    .app-container {
      display: flex;
      min-height: 100vh;
      position: relative;
      z-index: 1;
    }

    /* Sidebar */
    .sidebar {
      width: var(--sidebar-width);
      background: var(--glass-bg-solid);
      backdrop-filter: blur(30px) saturate(180%);
      -webkit-backdrop-filter: blur(30px) saturate(180%);
      border-right: 1px solid var(--glass-border);
      padding: 0;
      position: fixed;
      left: 0;
      top: 0;
      height: 100vh;
      overflow-y: auto;
      overflow-x: hidden;
      z-index: 1000;
      transition: all var(--transition-speed) cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: var(--shadow-lg);
      box-sizing: border-box;
    }

    /* Custom Scrollbar f√ºr Sidebar */
    .sidebar::-webkit-scrollbar {
      width: 6px;
    }

    .sidebar::-webkit-scrollbar-track {
      background: transparent;
    }

    .sidebar::-webkit-scrollbar-thumb {
      background: var(--glass-border);
      border-radius: 10px;
      transition: background 0.3s;
    }

    .sidebar::-webkit-scrollbar-thumb:hover {
      background: var(--accent-color);
    }

    /* Sidebar Header - Modern */
    .sidebar-header {
      padding: 2rem 1.5rem;
      border-bottom: 1px solid var(--glass-border);
      background: linear-gradient(180deg, var(--glass-bg) 0%, transparent 100%);
    }

    .sidebar-logo {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1.5rem;
      padding: 0.75rem;
      background: var(--accent-light);
      border-radius: var(--border-radius-sm);
      border: 1px solid var(--glass-border);
      transition: all 0.3s;
    }

    .sidebar-logo:hover {
      transform: translateX(4px);
      box-shadow: var(--shadow-glow);
    }

    .sidebar-logo i {
      font-size: 2.5rem;
      background: var(--accent-gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      animation: pulse 3s ease-in-out infinite;
    }

    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.7; }
    }

    .sidebar-logo-text h1 {
      font-size: 1.5rem;
      font-weight: 800;
      background: var(--accent-gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin: 0;
      letter-spacing: -0.02em;
    }

    .sidebar-logo-text p {
      font-size: 0.75rem;
      color: var(--text-muted);
      margin: 0;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    /* Server Info Card - Modernisiert */
    .server-info {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1.25rem;
      background: var(--bg-card);
      backdrop-filter: blur(10px);
      border-radius: var(--border-radius);
      border: 1px solid var(--glass-border);
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      cursor: pointer;
      position: relative;
      overflow: hidden;
    }

    .server-info::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: var(--accent-gradient);
      opacity: 0;
      transition: opacity 0.3s;
      z-index: 0;
    }

    .server-info:hover::before {
      opacity: 0.05;
    }

    .server-info:hover {
      transform: translateY(-4px);
      box-shadow: var(--shadow-lg);
      border-color: var(--accent-color);
    }

    .server-info > * {
      position: relative;
      z-index: 1;
    }

    .server-icon {
      width: 56px;
      height: 56px;
      border-radius: var(--border-radius);
      background: var(--accent-gradient);
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 800;
      color: white;
      font-size: 1.5rem;
      flex-shrink: 0;
      box-shadow: var(--shadow-md);
      transition: all 0.3s;
    }

    .server-info:hover .server-icon {
      transform: rotate(-5deg) scale(1.1);
      box-shadow: var(--shadow-glow);
    }

    .server-icon img {
      width: 100%;
      height: 100%;
      border-radius: 50%;
      object-fit: cover;
    }

    .server-details {
      flex: 1;
      min-width: 0;
      overflow: hidden;
    }

    .server-details h3 {
      font-size: 0.95rem;
      font-weight: 600;
      margin: 0;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      color: var(--text-color);
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .trial-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.25rem;
      padding: 0.15rem 0.5rem;
      background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
      color: white;
      font-size: 0.65rem;
      font-weight: 700;
      border-radius: 12px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      box-shadow: 0 2px 8px rgba(240, 147, 251, 0.4);
      animation: trialPulse 2s ease-in-out infinite;
      white-space: nowrap;
      flex-shrink: 0;
    }

    @keyframes trialPulse {
      0%, 100% {
        box-shadow: 0 2px 8px rgba(240, 147, 251, 0.4);
      }
      50% {
        box-shadow: 0 4px 16px rgba(240, 147, 251, 0.6);
      }
    }

    .trial-badge i {
      font-size: 0.7rem;
    }

    .server-details p {
      font-size: 0.75rem;
      color: var(--text-secondary);
      margin: 0;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      max-width: 100%;
    }

    .user-info {
      margin-top: 0.75rem;
      padding-top: 0.75rem;
      border-top: 1px solid var(--glass-border);
    }

    .sidebar-nav {
      padding: 1.5rem 0;
    }

    .nav-section {
      margin-bottom: 2rem;
    }

    .nav-section-title {
      font-size: 0.7rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 1.2px;
      color: var(--text-secondary);
      padding: 0 1.5rem;
      margin-bottom: 0.5rem;
    }

    .nav-item {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.75rem 1.5rem;
      color: var(--text-color);
      text-decoration: none;
      transition: all 0.2s;
      border-left: 3px solid transparent;
      position: relative;
    }

    .nav-item:hover {
      background: linear-gradient(90deg, var(--glass-bg) 0%, transparent 100%);
      border-left-color: var(--accent-color);
    }

    .nav-item.active {
      background: linear-gradient(90deg, var(--glass-bg) 0%, transparent 100%);
      border-left-color: var(--accent-color);
      font-weight: 600;
    }

    .nav-item.active::after {
      content: '';
      position: absolute;
      right: 1rem;
      width: 6px;
      height: 6px;
      background: var(--accent-color);
      border-radius: 50%;
      box-shadow: 0 0 10px var(--accent-color);
    }

    .nav-item i {
      font-size: 1.1rem;
      width: 24px;
      text-align: center;
      color: var(--accent-color);
    }

    /* Main Content */
    .main-content {
      margin-left: var(--sidebar-width);
      flex: 1;
      padding: 2rem;
      max-width: calc(100% - var(--sidebar-width));
      box-sizing: border-box;
    }

    .content-header {
      margin-bottom: 2rem;
      margin-top: 4rem; /* Platz f√ºr fixed Language-Dropdown */
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 1rem;
    }

    .content-title {
      font-size: 2rem;
      font-weight: 700;
      color: var(--text-color);
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .content-title i {
      background: linear-gradient(135deg, var(--accent-color), var(--accent-hover));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .header-actions {
      display: flex;
      gap: 0.75rem;
      flex-wrap: wrap;
      align-items: center;
    }

    .header-actions .btn {
      white-space: nowrap; /* Verhindert Textumbruch im Button */
    }

    /* Alerts */
    .alert {
      padding: 1rem 1.25rem;
      border-radius: 12px;
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
      gap: 1rem;
      animation: slideIn 0.3s ease-out;
      border: 1px solid;
      backdrop-filter: blur(10px);
    }

    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .alert-success {
      background: var(--glass-bg);
      border-color: var(--accent-color);
      color: var(--text-color);
    }

    .alert-success i {
      color: var(--success-color);
    }

    .alert-warning {
      background: var(--glass-bg);
      border-color: var(--warning-color);
      color: var(--text-color);
    }

    .alert-warning i {
      color: var(--warning-color);
    }

    .alert-error {
      background: var(--glass-bg);
      border-color: var(--error-color);
      color: var(--text-color);
    }

    .alert-error i {
      color: var(--error-color);
    }

    .alert-info {
      background: var(--glass-bg);
      border-color: var(--accent-color);
      color: var(--text-color);
    }

    .alert-info i {
      color: var(--accent-color);
    }

    .alert i {
      font-size: 1.3rem;
      flex-shrink: 0;
    }

    /* Read-Only Banner */
    .readonly-banner {
      background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
      color: white;
      padding: 1.5rem;
      border-radius: 15px;
      text-align: center;
      margin-bottom: 2rem;
      box-shadow: var(--shadow-lg);
    }

    .readonly-banner h3 {
      margin: 0 0 0.5rem 0;
      font-size: 1.3rem;
    }

    .readonly-banner p {
      margin: 0;
      opacity: 0.95;
      font-size: 0.95rem;
    }

    /* Tabs */
    .tabs-container {
      margin-bottom: 2rem;
    }

    .tabs-nav {
      display: flex;
      gap: 0.5rem;
      background: var(--glass-bg);
      backdrop-filter: blur(10px);
      padding: 0.5rem;
      border-radius: 15px;
      border: 1px solid var(--glass-border);
      overflow-x: auto;
      box-shadow: var(--shadow-sm);
    }

    .tabs-nav::-webkit-scrollbar {
      height: 6px;
    }

    .tabs-nav::-webkit-scrollbar-track {
      background: transparent;
    }

    .tabs-nav::-webkit-scrollbar-thumb {
      background: var(--accent-color);
      border-radius: 3px;
    }

    .tab-btn {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1.5rem;
      border: none;
      background: transparent;
      color: var(--text-secondary);
      font-size: 0.9rem;
      font-weight: 500;
      cursor: pointer;
      border-radius: 10px;
      transition: all 0.2s;
      white-space: nowrap;
      position: relative;
    }

    .tab-btn:hover {
      background: rgba(14, 165, 233, 0.1);
      color: var(--text-color);
    }

    .tab-btn.active {
      background: var(--accent-color);
      color: white;
      box-shadow: 0 4px 12px rgba(14, 165, 233, 0.3);
    }

    .tab-btn i {
      font-size: 1rem;
    }

    .tab-badge {
      background: rgba(239, 68, 68, 0.2);
      color: var(--error-color);
      border: 1px solid var(--error-color);
      padding: 0.15rem 0.5rem;
      border-radius: 10px;
      font-size: 0.7rem;
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      gap: 0.25rem;
    }

    /* Tab Badge Variants */
    .tab-badge.success-badge {
      background: rgba(16, 185, 129, 0.2);
      color: #10b981;
      border-color: #10b981;
    }

    .tab-badge.error-badge {
      background: rgba(239, 68, 68, 0.2);
      color: #ef4444;
      border-color: #ef4444;
    }

    .tab-badge.premium-badge {
      background: linear-gradient(135deg, rgba(139, 92, 246, 0.2), rgba(219, 39, 119, 0.2));
      color: #a855f7;
      border-color: #a855f7;
    }

    .tab-btn.active .tab-badge {
      background: rgba(255, 255, 255, 0.2);
      color: white;
      border-color: rgba(255, 255, 255, 0.4);
    }

    .tab-btn.active .tab-badge.success-badge {
      background: rgba(16, 185, 129, 0.3);
      color: #d1fae5;
      border-color: #6ee7b7;
    }

    .tab-btn.active .tab-badge.error-badge {
      background: rgba(239, 68, 68, 0.3);
      color: #fecaca;
      border-color: #fca5a5;
    }

    .tab-btn.active .tab-badge.premium-badge {
      background: linear-gradient(135deg, rgba(139, 92, 246, 0.4), rgba(219, 39, 119, 0.4));
      color: #e9d5ff;
      border-color: #c4b5fd;
    }

    .tab-content {
      display: none;
      animation: fadeIn 0.3s ease-out;
    }

    .tab-content.active {
      display: block;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Cards */
    /* ===== MODERN CARD DESIGN ===== */
    .card {
      background: var(--bg-card);
      backdrop-filter: blur(20px) saturate(180%);
      -webkit-backdrop-filter: blur(20px) saturate(180%);
      border: 1px solid var(--glass-border);
      border-radius: var(--border-radius);
      padding: 0;
      margin-bottom: 2rem;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: var(--shadow-md);
      position: relative;
      overflow: hidden;
    }

    .card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 3px;
      background: var(--accent-gradient);
      transform: scaleX(0);
      transform-origin: left;
      transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .card:hover::before {
      transform: scaleX(1);
    }

    .card:hover {
      transform: translateY(-6px);
      box-shadow: var(--shadow-xl);
      border-color: var(--accent-color);
    }

    .card-header {
      display: flex;
      align-items: flex-start;
      justify-content: space-between;
      padding: 2rem 2rem 1.5rem;
      border-bottom: 1px solid var(--glass-border);
      background: linear-gradient(180deg, var(--glass-bg) 0%, transparent 100%);
    }

    .card-title {
      display: flex;
      align-items: center;
      gap: 1rem;
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--text-color);
      letter-spacing: -0.01em;
    }

    .card-icon {
      width: 48px;
      height: 48px;
      background: var(--accent-gradient);
      border-radius: var(--border-radius-sm);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.25rem;
      box-shadow: var(--shadow-md);
      flex-shrink: 0;
      transition: all 0.3s;
    }

    .card:hover .card-icon {
      transform: rotate(-5deg) scale(1.1);
      box-shadow: var(--shadow-glow);
    }

    .card-description {
      font-size: 0.875rem;
      color: var(--text-secondary);
      margin-top: 0.5rem;
      line-height: 1.6;
    }

    .card-body {
      padding: 2rem;
    }

    /* Form Elements */
    .form-group {
      margin-bottom: 1.5rem;
    }

    .form-label {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      color: var(--text-color);
      font-size: 0.9rem;
    }

    .form-label i {
      color: var(--accent-color);
      font-size: 0.9rem;
    }

    .form-label-optional {
      font-weight: normal;
      color: var(--text-secondary);
      font-size: 0.8rem;
      margin-left: auto;
    }

    .help-text {
      font-size: 0.8rem;
      color: var(--text-secondary);
      margin-top: 0.5rem;
      display: flex;
      align-items: flex-start;
      gap: 0.5rem;
      line-height: 1.5;
    }

    .help-text i {
      margin-top: 0.2rem;
      color: var(--accent-color);
      flex-shrink: 0;
    }

    input, select, textarea {
      width: 100%;
      padding: 0.75rem 1rem;
      border: 1px solid var(--border-color);
      border-radius: 10px;
      background: var(--glass-bg);
      backdrop-filter: blur(10px);
      color: var(--text-color);
      font-size: 0.9rem;
      transition: all 0.2s;
      font-family: inherit;
    }

    input:focus, select:focus, textarea:focus {
      outline: none;
      border-color: var(--accent-color);
      box-shadow: 0 0 0 3px rgba(14, 165, 233, 0.1);
    }

    input:disabled, select:disabled, textarea:disabled {
      opacity: 0.6;
      cursor: not-allowed;
      background: var(--bg-secondary);
    }

    /* Toggle Switch Styles */
    .toggle-container {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .toggle-label {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      cursor: pointer;
      user-select: none;
    }

    .toggle-label input[type="checkbox"] {
      display: none;
    }

    .toggle-slider {
      position: relative;
      width: 50px;
      height: 26px;
      background: var(--border-color);
      border-radius: 34px;
      transition: all 0.3s;
      flex-shrink: 0;
    }

    .toggle-slider::before {
      content: '';
      position: absolute;
      width: 20px;
      height: 20px;
      left: 3px;
      top: 3px;
      background: white;
      border-radius: 50%;
      transition: all 0.3s;
    }

    .toggle-label input:checked + .toggle-slider {
      background: var(--accent-color);
    }

    .toggle-label input:checked + .toggle-slider::before {
      transform: translateX(24px);
    }

    .toggle-text {
      font-weight: 500;
      color: var(--text-color);
    }

    select[multiple] {
      height: auto;
      min-height: 150px;
      padding: 0.5rem;
    }

    select[multiple] option {
      padding: 0.5rem;
      border-radius: 6px;
      margin-bottom: 0.25rem;
    }

    select[multiple] option:checked {
      background: var(--accent-color);
      color: white;
    }

    textarea {
      min-height: 120px;
      resize: vertical;
      font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
      line-height: 1.6;
    }

    /* Buttons */
    .btn {
      padding: 0.75rem 1.5rem;
      border: none;
      border-radius: 10px;
      font-size: 0.9rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      text-decoration: none;
      justify-content: center;
    }

    .btn-primary {
      background: linear-gradient(135deg, #667eea, #764ba2);
      color: white;
      box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }

    .btn-success {
      background: linear-gradient(135deg, var(--success-color), #059669);
      color: white;
      box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
    }

    .btn-success:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
    }

    .btn-warning {
      background: linear-gradient(135deg, var(--warning-color), #d97706);
      color: white;
      box-shadow: 0 4px 12px rgba(245, 158, 11, 0.3);
    }

    .btn-warning:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(245, 158, 11, 0.4);
    }

    .btn-outline {
      background: transparent;
      border: 2px solid var(--accent-color);
      color: var(--accent-color);
    }

    .btn-outline:hover {
      background: var(--accent-color);
      color: white;
    }

    .btn-sm {
      padding: 0.5rem 1rem;
      font-size: 0.85rem;
    }

    .btn:disabled {
      opacity: 0.5;
      cursor: not-allowed;
      transform: none !important;
    }

    .btn-group {
      display: flex;
      gap: 0.75rem;
      flex-wrap: wrap;
    }

    /* Grid System */
    /* ===== MODERN GRID SYSTEM ===== */
    .grid {
      display: grid;
      gap: 2rem;
    }

    .grid-2 {
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    }

    .grid-3 {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    }

    .grid-4 {
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    }

    /* ===== MODERN STATS CARDS ===== */
    .stats-card {
      background: var(--bg-card);
      backdrop-filter: blur(20px) saturate(180%);
      -webkit-backdrop-filter: blur(20px) saturate(180%);
      border: 1px solid var(--glass-border);
      border-radius: var(--border-radius);
      padding: 1.75rem;
      display: flex;
      align-items: center;
      gap: 1.25rem;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: var(--shadow-md);
      position: relative;
      overflow: hidden;
    }

    .stats-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: var(--accent-gradient);
      opacity: 0;
      transition: opacity 0.4s;
      z-index: 0;
    }

    .stats-card:hover::before {
      opacity: 0.05;
    }

    .stats-card:hover {
      transform: translateY(-6px) scale(1.02);
      box-shadow: var(--shadow-xl);
      border-color: var(--accent-color);
    }

    .stats-card > * {
      position: relative;
      z-index: 1;
    }

    .trial-stats-card {
      background: linear-gradient(135deg, rgba(240, 147, 251, 0.15) 0%, rgba(245, 87, 108, 0.15) 100%);
      border: 2px solid rgba(240, 147, 251, 0.5);
      box-shadow: 0 4px 16px rgba(240, 147, 251, 0.3);
    }

    .trial-stats-card:hover {
      box-shadow: 0 6px 20px rgba(240, 147, 251, 0.5);
    }

    .trial-stats-card .stats-icon {
      background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }

    .stats-icon {
      width: 50px;
      height: 50px;
      background: linear-gradient(135deg, var(--accent-color), var(--accent-hover));
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.5rem;
      flex-shrink: 0;
    }

    .stats-content h4 {
      font-size: 0.8rem;
      color: var(--text-secondary);
      margin: 0 0 0.25rem 0;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .stats-content p {
      font-size: 1.8rem;
      font-weight: 700;
      color: var(--text-color);
      margin: 0;
    }

    /* Priority Badge */
    .priority-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.35rem 0.85rem;
      border-radius: 20px;
      font-size: 0.8rem;
      font-weight: 600;
      border: 1px solid;
    }

    .priority-green {
      background: rgba(16, 185, 129, 0.15);
      color: var(--success-color);
      border-color: var(--success-color);
    }

    .priority-orange {
      background: rgba(245, 158, 11, 0.15);
      color: var(--warning-color);
      border-color: var(--warning-color);
    }

    .priority-red {
      background: rgba(239, 68, 68, 0.15);
      color: var(--error-color);
      border-color: var(--error-color);
    }

    /* Topics List */
    .topics-list {
      display: grid;
      gap: 1rem;
    }

    /* Form Field Items & Topic Items */
    .form-field-item,
    .topic-item {
      background: var(--glass-bg);
      padding: 1.25rem;
      border-radius: 12px;
      border: 1px solid var(--glass-border);
      margin-bottom: 1rem;
      transition: all 0.2s;
      position: relative;
    }

    .form-field-item:hover,
    .topic-item:hover {
      box-shadow: var(--shadow-sm);
      border-color: var(--accent-color);
    }

    /* Topic Header Bar */
    .topic-header-bar {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 0.75rem;
    }

    .topic-number {
      background: var(--accent-color);
      color: #000;
      width: 24px;
      height: 24px;
      border-radius: 6px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
      font-size: 0.75rem;
    }

    /* Topic Name Row - Inline Edit */
    .topic-name-row {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      margin-bottom: 1rem;
    }

    .topic-emoji-input {
      flex-shrink: 0;
    }

    .topic-emoji-input input {
      width: 52px;
      height: 52px;
      font-size: 1.75rem;
      text-align: center;
      padding: 0;
      border-radius: 10px;
      background: rgba(0,0,0,0.3);
      border: 2px solid var(--glass-border);
      transition: all 0.2s;
    }

    .topic-emoji-input input:focus {
      border-color: var(--accent-color);
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
    }

    .topic-name-input {
      flex: 1;
    }

    .topic-name-input input {
      font-size: 1.25rem;
      font-weight: 600;
      padding: 0.75rem 1rem;
      background: rgba(0,0,0,0.3);
      border: 2px solid var(--glass-border);
      border-radius: 10px;
      width: 100%;
      transition: all 0.2s;
    }

    .topic-name-input input:focus {
      border-color: var(--accent-color);
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
    }

    .topic-name-input input::placeholder {
      font-weight: 400;
      opacity: 0.5;
    }

    /* Topic Settings Row */
    .topic-settings-row {
      display: flex;
      gap: 1rem;
      padding-top: 0.75rem;
      border-top: 1px solid var(--glass-border);
    }

    .topic-setting {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }

    .topic-setting label {
      font-size: 0.7rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      opacity: 0.7;
      font-weight: 600;
    }

    .topic-setting label i {
      margin-right: 0.25rem;
    }

    .topic-setting input,
    .topic-setting select {
      padding: 0.5rem 0.75rem;
      font-size: 0.85rem;
      background: rgba(0,0,0,0.2);
      border: 1px solid var(--glass-border);
      border-radius: 6px;
      min-width: 120px;
    }

    .topic-setting-wide {
      flex: 1;
    }

    .topic-setting-wide select {
      width: 100%;
    }

    @media (max-width: 640px) {
      .topic-settings-row {
        flex-direction: column;
      }
      .topic-setting input,
      .topic-setting select {
        width: 100%;
      }
    }

    .form-field-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 1.5rem;
      padding-bottom: 1rem;
      border-bottom: 1px solid var(--glass-border);
    }

    .form-field-number {
      font-size: 1.2rem;
      font-weight: 700;
      color: var(--accent-color);
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .form-field-number::before {
      content: 'üìã';
      font-size: 1.5rem;
    }

    .btn-icon-danger {
      background: transparent;
      border: 1px solid rgba(217, 43, 43, 0.3);
      color: #d92b2b;
      width: 36px;
      height: 36px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.2s;
      font-size: 0.9rem;
    }

    .btn-icon-danger:hover {
      background: rgba(217, 43, 43, 0.1);
      border-color: #d92b2b;
      transform: scale(1.05);
    }

    /* Preview Card */
    .preview-card {
      background: var(--bg-secondary);
      border: 1px solid var(--border-color);
      border-radius: 12px;
      padding: 1.5rem;
      margin-top: 1rem;
    }

    .preview-title {
      font-size: 0.85rem;
      font-weight: 600;
      color: var(--text-secondary);
      margin-bottom: 1rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .embed-preview {
      background: var(--glass-bg);
      border-left: 4px solid var(--accent-color);
      border-radius: 0 8px 8px 0;
      padding: 1rem;
      max-width: 500px;
    }

    .embed-preview-title {
      font-weight: 600;
      margin-bottom: 0.5rem;
      font-size: 0.95rem;
      color: var(--text-color);
    }

    .embed-preview-desc {
      font-size: 0.85rem;
      color: var(--text-secondary);
      line-height: 1.5;
      margin-bottom: 0.5rem;
    }

    .embed-preview-footer {
      font-size: 0.75rem;
      color: var(--text-secondary);
      margin-top: 0.5rem;
      padding-top: 0.5rem;
      border-top: 1px solid var(--glass-border);
    }

    /* Theme Toggle */
    .theme-toggle {
      position: fixed;
      top: 1.5rem;
      right: 1.5rem;
      width: 50px;
      height: 50px;
      border-radius: 50%;
      background: var(--glass-bg);
      backdrop-filter: blur(10px);
      border: 1px solid var(--glass-border);
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      z-index: 1001;
      transition: all 0.2s;
      box-shadow: var(--shadow-md);
    }

    .theme-toggle:hover {
      transform: translateY(-2px) rotate(20deg);
      box-shadow: var(--shadow-lg);
    }

    .theme-toggle i {
      font-size: 1.2rem;
      color: var(--accent-color);
    }

    /* Language Dropdown */
    .lang-dropdown {
      position: fixed;
      top: 1.5rem;
      right: 5.5rem;
      z-index: 1001;
      max-width: calc(100% - 11rem); /* Verhindert √úberlappung mit Theme-Toggle */
    }

    .lang-dropdown-toggle {
      padding: 0.6rem 1rem;
      background: var(--glass-bg);
      backdrop-filter: blur(10px);
      border: 1px solid var(--glass-border);
      border-radius: 25px;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      box-shadow: var(--shadow-md);
      transition: all 0.2s;
      font-size: 0.9rem;
      color: var(--text-color);
    }

    .lang-dropdown-toggle:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-lg);
    }

    .lang-dropdown-toggle img {
      width: 24px;
      height: 18px;
      border-radius: 3px;
      border: 1px solid var(--glass-border);
    }

    .lang-dropdown-menu {
      position: absolute;
      top: calc(100% + 0.5rem);
      right: 0;
      background: var(--glass-bg-solid);
      backdrop-filter: blur(20px);
      border: 1px solid var(--glass-border);
      border-radius: 12px;
      box-shadow: var(--shadow-lg);
      display: none;
      min-width: 200px;
      overflow: hidden;
    }

    .lang-dropdown-menu.show {
      display: block;
      animation: slideDown 0.2s ease-out;
    }

    @keyframes slideDown {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .lang-dropdown-item {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.75rem 1rem;
      cursor: pointer;
      transition: all 0.2s;
      text-decoration: none;
      color: var(--text-color);
      border-bottom: 1px solid var(--glass-border);
    }

    .lang-dropdown-item:last-child {
      border-bottom: none;
    }

    .lang-dropdown-item:hover {
      background: var(--accent-color);
      color: white;
    }

    .lang-dropdown-item.active {
      background: var(--accent-color);
      color: white;
      font-weight: 600;
    }

    .lang-dropdown-item img {
      width: 24px;
      height: 18px;
      border-radius: 3px;
    }

    /* Loading Overlay */
    .loading-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.8);
      backdrop-filter: blur(5px);
      display: none;
      justify-content: center;
      align-items: center;
      z-index: 9999;
    }

    .loading-overlay.show {
      display: flex;
    }

    .loading-spinner {
      width: 60px;
      height: 60px;
      border: 6px solid rgba(14, 165, 233, 0.2);
      border-top-color: var(--accent-color);
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    /* Save Button Fixed */
    .save-button-fixed {
      position: fixed;
      bottom: 2rem;
      right: 2rem;
      z-index: 998;
      box-shadow: var(--shadow-lg);
    }

    /* Mobile Menu Toggle */
    .mobile-toggle {
      display: none;
      position: fixed;
      bottom: 2rem;
      left: 2rem;
      width: 60px;
      height: 60px;
      border-radius: 50%;
      background: var(--accent-color);
      color: white;
      border: none;
      font-size: 1.5rem;
      cursor: pointer;
      z-index: 999;
      box-shadow: var(--shadow-lg);
      transition: all 0.2s;
    }

    .mobile-toggle:hover {
      transform: scale(1.1);
    }

    /* Responsive */
    /* ===== MODERN MOBILE DESIGN ===== */

    /* Tablet & Mobile */
    @media (max-width: 1024px) {
      /* Sidebar als Overlay */
      .sidebar {
        transform: translateX(-100%);
        box-shadow: var(--shadow-xl);
      }

      .sidebar.mobile-open {
        transform: translateX(0);
      }

      /* Sidebar Overlay Background */
      .sidebar-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(4px);
        z-index: 999;
        opacity: 0;
        transition: opacity 0.3s;
      }

      .sidebar-overlay.active {
        display: block;
        opacity: 1;
      }

      /* Main Content Full Width */
      .main-content {
        margin-left: 0;
        max-width: 100%;
        padding: 1.5rem;
      }

      /* Mobile Toggle sichtbar */
      .mobile-toggle {
        display: flex;
        align-items: center;
        justify-content: center;
        position: fixed;
        top: 1rem;
        left: 1rem;
        width: 56px;
        height: 56px;
        background: var(--accent-gradient);
        border: none;
        border-radius: var(--border-radius);
        cursor: pointer;
        z-index: 1001;
        box-shadow: var(--shadow-lg);
        transition: all 0.3s;
      }

      .mobile-toggle:hover {
        transform: scale(1.05);
        box-shadow: var(--shadow-glow);
      }

      .mobile-toggle i {
        color: white;
        font-size: 1.5rem;
      }

      /* Content Header Stack */
      .content-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
        margin-top: 5rem;
      }

      /* Grid -> Single Column */
      .grid-2,
      .grid-3,
      .grid-4 {
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }

      /* Save Button Position */
      .save-button-fixed {
        bottom: 1.5rem;
        left: 1.5rem;
        right: 1.5rem;
        width: calc(100% - 3rem);
      }
    }

    /* Mobile Optimierungen */
    @media (max-width: 768px) {
      /* Padding reduzieren */
      .main-content {
        padding: 1rem;
      }

      /* Tabs Horizontal Scroll */
      .tabs-nav {
        flex-wrap: nowrap;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
        scrollbar-width: none;
        gap: 0.5rem;
        padding-bottom: 0.5rem;
      }

      .tabs-nav::-webkit-scrollbar {
        display: none;
      }

      /* Tab Buttons Touch-Optimiert */
      .tab-btn {
        font-size: 0.875rem;
        padding: 1rem 1.5rem;
        white-space: nowrap;
        min-height: 56px;
        border-radius: var(--border-radius-sm);
