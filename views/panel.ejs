    // Multi-Ticket-System Functions
    function switchSystem(systemId) {
      const url = new URL(window.location.href);
      url.searchParams.set('system', systemId);
      window.location.href = url.toString();
    }

    function createNewSystem() {
      const name = prompt('<%= lang === "de" ? "Name des neuen Ticket-Systems:" : "Name of the new ticket system:" %>');
      if (!name || name.trim() === '') return;

      fetch('/panel/system/create', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ name: name.trim() })
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          alert('<%= lang === "de" ? "System erfolgreich erstellt!" : "System created successfully!" %>');
          window.location.href = `/panel?system=${data.systemId}`;
        } else {
          alert('<%= lang === "de" ? "Fehler beim Erstellen des Systems" : "Error creating system" %>');
        }
      })
      .catch(err => {
        console.error(err);
        alert('<%= lang === "de" ? "Netzwerkfehler" : "Network error" %>');
      });
    }

    function deleteSystem(systemId, systemName) {
      if (systemId === 'default') {
        alert('<%= lang === "de" ? "Das Standard-System kann nicht gelÃ¶scht werden!" : "The default system cannot be deleted!" %>');
        return;
      }

      if (!confirm(`<%= lang === "de" ? "Ticket-System \\\"" : "Delete ticket system \\\"" %>${systemName}<%= lang === "de" ? "\\\" wirklich lÃ¶schen?" : "\\\" permanently?" %>`)) {
        return;
      }

      fetch(`/panel/system/${systemId}/delete`, {
        method: 'POST'
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          alert('<%= lang === "de" ? "System gelÃ¶scht!" : "System deleted!" %>');
          window.location.href = '/panel?system=default';
        } else {
          alert('<%= lang === "de" ? "Fehler beim LÃ¶schen" : "Error deleting system" %>');
        }
      })
      .catch(err => {
        console.error(err);
        alert('<%= lang === "de" ? "Netzwerkfehler" : "Network error" %>');
      });
    }

    // Avatar Upload Functions
    document.getElementById('avatarFile')?.addEventListener('change', function(e) {
      const file = e.target.files[0];
      const fileNameSpan = document.getElementById('avatarFileName');
      const uploadBtn = document.getElementById('uploadAvatarBtn');

      if (file) {
        // Check file size (5MB)
        if (file.size > 5 * 1024 * 1024) {
          alert('<%= lang === "de" ? "Datei zu groÃŸ! Max. 5MB erlaubt." : "File too large! Max. 5MB allowed." %>');
          e.target.value = '';
          fileNameSpan.textContent = '<%= lang === "de" ? "Keine Datei gewÃ¤hlt" : "No file chosen" %>';
          uploadBtn.style.display = 'none';
          return;
        }

        // Check file type
        const allowedTypes = ['image/png', 'image/jpeg', 'image/jpg', 'image/gif', 'image/webp'];
        if (!allowedTypes.includes(file.type)) {
          alert('<%= lang === "de" ? "UngÃ¼ltiger Dateityp! Nur PNG, JPG, GIF, WEBP erlaubt." : "Invalid file type! Only PNG, JPG, GIF, WEBP allowed." %>');
          e.target.value = '';
          fileNameSpan.textContent = '<%= lang === "de" ? "Keine Datei gewÃ¤hlt" : "No file chosen" %>';
          uploadBtn.style.display = 'none';
          return;
        }

        fileNameSpan.textContent = file.name;
        uploadBtn.style.display = 'inline-flex';
      } else {
        fileNameSpan.textContent = '<%= lang === "de" ? "Keine Datei gewÃ¤hlt" : "No file chosen" %>';
        uploadBtn.style.display = 'none';
      }
    });

    function uploadAvatar() {
      const fileInput = document.getElementById('avatarFile');
      const file = fileInput.files[0];

      if (!file) {
        alert('<%= lang === "de" ? "Bitte wÃ¤hle eine Datei aus" : "Please choose a file" %>');
        return;
      }

      const formData = new FormData();
      formData.append('avatar', file);

      const uploadBtn = document.getElementById('uploadAvatarBtn');
      uploadBtn.disabled = true;
      uploadBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> <%= lang === "de" ? "Hochladen..." : "Uploading..." %>';

      fetch('/panel/upload-avatar', {
        method: 'POST',
        body: formData
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          alert('<%= lang === "de" ? "Avatar erfolgreich hochgeladen!" : "Avatar uploaded successfully!" %>');
          window.location.reload();
        } else {
          alert('<%= lang === "de" ? "Fehler: " : "Error: " %>' + (data.error || 'Upload fehlgeschlagen'));
          uploadBtn.disabled = false;
          uploadBtn.innerHTML = '<i class="fas fa-cloud-upload-alt"></i> <%= lang === "de" ? "Hochladen" : "Upload" %>';
        }
      })
      .catch(err => {
        console.error(err);
        alert('<%= lang === "de" ? "Netzwerkfehler beim Hochladen" : "Network error during upload" %>');
        uploadBtn.disabled = false;
        uploadBtn.innerHTML = '<i class="fas fa-cloud-upload-alt"></i> <%= lang === "de" ? "Hochladen" : "Upload" %>';
      });
    }

    function deleteAvatar() {
      if (!confirm('<%= lang === "de" ? "Avatar wirklich lÃ¶schen?" : "Really delete avatar?" %>')) {
