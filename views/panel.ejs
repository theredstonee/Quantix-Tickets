  <style>
    /* ============================================================
     * MODERN TAB-BASED PANEL DESIGN
     * ============================================================ */

    /* CSS Variables */
    :root {
      --bg-color: #f0f8ff;
      --bg-secondary: #e5f3ff;
      --text-color: #1a1a2e;
      --text-secondary: #64748b;
      --border-color: #bdd7ee;
      --accent-color: #0ea5e9;
      --accent-hover: #0284c7;
      --glass-bg: rgba(255, 255, 255, 0.8);
      --glass-bg-solid: rgba(255, 255, 255, 0.95);
      --glass-border: rgba(14, 165, 233, 0.2);
      --shadow-sm: 0 2px 8px rgba(14, 165, 233, 0.08);
      --shadow-md: 0 4px 16px rgba(14, 165, 233, 0.12);
      --shadow-lg: 0 8px 32px rgba(14, 165, 233, 0.16);
      --success-color: #10b981;
      --warning-color: #f59e0b;
      --error-color: #ef4444;
      --sidebar-width: 280px;
      --header-height: 70px;
      --tab-height: 60px;
    }

    [data-theme="dark"] {
      --bg-color: #000000;
      --bg-secondary: #0a0a0f;
      --text-color: #60a5fa;
      --text-secondary: #93c5fd;
      --border-color: #1e293b;
      --accent-color: #3b82f6;
      --accent-hover: #60a5fa;
      --glass-bg: rgba(10, 10, 20, 0.8);
      --glass-bg-solid: rgba(10, 10, 20, 0.95);
      --glass-border: rgba(59, 130, 246, 0.3);
      --shadow-sm: 0 2px 8px rgba(59, 130, 246, 0.15);
      --shadow-md: 0 4px 16px rgba(59, 130, 246, 0.2);
      --shadow-lg: 0 8px 32px rgba(59, 130, 246, 0.25);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: var(--bg-color);
      color: var(--text-color);
      min-height: 100vh;
      position: relative;
      overflow-x: hidden;
    }

    /* Animated Background */
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: radial-gradient(circle at 20% 50%, var(--accent-color) 0%, transparent 50%),
                  radial-gradient(circle at 80% 80%, var(--accent-color) 0%, transparent 50%);
      opacity: 0.03;
      animation: bgPulse 15s ease-in-out infinite;
      pointer-events: none;
      z-index: 0;
    }

    @keyframes bgPulse {
      0%, 100% { opacity: 0.03; }
      50% { opacity: 0.05; }
    }

    /* Dark Mode: Blaues Hintergrundmuster */
    [data-theme="dark"] body::before {
      background: radial-gradient(circle, rgba(59, 130, 246, 0.4) 1px, transparent 1px);
    }

    /* Layout */
    .app-container {
      display: flex;
      min-height: 100vh;
      position: relative;
      z-index: 1;
    }

    /* Sidebar */
    .sidebar {
      width: var(--sidebar-width);
      background: var(--glass-bg-solid);
      backdrop-filter: blur(20px);
      border-right: 1px solid var(--glass-border);
      padding: 1.5rem 0;
      position: fixed;
      left: 0;
      top: 0;
      height: 100vh;
      overflow-y: auto;
      overflow-x: hidden;
      z-index: 1000;
      transition: transform 0.3s;
      box-shadow: var(--shadow-md);
      box-sizing: border-box;
    }

    .sidebar-header {
      padding: 0 1.5rem 1.5rem;
      border-bottom: 1px solid var(--glass-border);
      width: 100%;
      box-sizing: border-box;
      overflow: hidden;
    }

    .sidebar-logo {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1.5rem;
    }

    .sidebar-logo i {
      font-size: 2rem;
      color: var(--accent-color);
      background: linear-gradient(135deg, var(--accent-color), var(--accent-hover));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .sidebar-logo-text h1 {
      font-size: 1.4rem;
      font-weight: 700;
      color: var(--text-color);
      margin: 0;
    }

    .sidebar-logo-text p {
      font-size: 0.8rem;
      color: var(--text-secondary);
      margin: 0;
    }

    .server-info {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 1rem;
      background: var(--glass-bg);
      border-radius: 12px;
      border: 1px solid var(--glass-border);
      transition: all 0.2s;
      width: 100%;
      max-width: 100%;
      box-sizing: border-box;
      min-width: 0;
    }

    .server-info:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-sm);
    }

    .server-icon {
      width: 48px;
      height: 48px;
      border-radius: 50%;
      background: linear-gradient(135deg, var(--accent-color), var(--accent-hover));
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      color: white;
      font-size: 1.2rem;
      flex-shrink: 0;
    }

    .server-icon img {
      width: 100%;
      height: 100%;
      border-radius: 50%;
      object-fit: cover;
    }

    .server-details {
      flex: 1;
      min-width: 0;
      overflow: hidden;
    }

    .server-details h3 {
      font-size: 0.95rem;
      font-weight: 600;
      margin: 0;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      color: var(--text-color);
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .trial-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.25rem;
      padding: 0.15rem 0.5rem;
      background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
      color: white;
      font-size: 0.65rem;
      font-weight: 700;
      border-radius: 12px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      box-shadow: 0 2px 8px rgba(240, 147, 251, 0.4);
      animation: trialPulse 2s ease-in-out infinite;
      white-space: nowrap;
      flex-shrink: 0;
    }

    @keyframes trialPulse {
      0%, 100% {
        box-shadow: 0 2px 8px rgba(240, 147, 251, 0.4);
      }
      50% {
        box-shadow: 0 4px 16px rgba(240, 147, 251, 0.6);
      }
    }

    .trial-badge i {
      font-size: 0.7rem;
    }

    .server-details p {
      font-size: 0.75rem;
      color: var(--text-secondary);
      margin: 0;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      max-width: 100%;
    }

    .user-info {
      margin-top: 0.75rem;
      padding-top: 0.75rem;
      border-top: 1px solid var(--glass-border);
    }

    .sidebar-nav {
      padding: 1.5rem 0;
    }

    .nav-section {
      margin-bottom: 2rem;
    }

    .nav-section-title {
      font-size: 0.7rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 1.2px;
      color: var(--text-secondary);
      padding: 0 1.5rem;
      margin-bottom: 0.5rem;
    }

    .nav-item {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.75rem 1.5rem;
      color: var(--text-color);
      text-decoration: none;
      transition: all 0.2s;
      border-left: 3px solid transparent;
      position: relative;
    }

    .nav-item:hover {
      background: linear-gradient(90deg, var(--glass-bg) 0%, transparent 100%);
      border-left-color: var(--accent-color);
    }

    .nav-item.active {
      background: linear-gradient(90deg, var(--glass-bg) 0%, transparent 100%);
      border-left-color: var(--accent-color);
      font-weight: 600;
    }

    .nav-item.active::after {
      content: '';
      position: absolute;
      right: 1rem;
      width: 6px;
      height: 6px;
      background: var(--accent-color);
      border-radius: 50%;
      box-shadow: 0 0 10px var(--accent-color);
    }

    .nav-item i {
      font-size: 1.1rem;
      width: 24px;
      text-align: center;
      color: var(--accent-color);
    }

    /* Main Content */
    .main-content {
      margin-left: var(--sidebar-width);
      flex: 1;
      padding: 2rem;
      max-width: calc(100% - var(--sidebar-width));
    }

    .content-header {
      margin-bottom: 2rem;
      margin-top: 4rem; /* Platz f√ºr fixed Language-Dropdown */
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 1rem;
    }

    .content-title {
      font-size: 2rem;
      font-weight: 700;
      color: var(--text-color);
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .content-title i {
      background: linear-gradient(135deg, var(--accent-color), var(--accent-hover));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .header-actions {
      display: flex;
      gap: 0.75rem;
      flex-wrap: wrap;
      align-items: center;
    }

    .header-actions .btn {
      white-space: nowrap; /* Verhindert Textumbruch im Button */
    }

    /* Alerts */
    .alert {
      padding: 1rem 1.25rem;
      border-radius: 12px;
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
      gap: 1rem;
      animation: slideIn 0.3s ease-out;
      border: 1px solid;
      backdrop-filter: blur(10px);
    }

    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .alert-success {
      background: var(--glass-bg);
      border-color: var(--accent-color);
      color: var(--text-color);
    }

    .alert-success i {
      color: var(--success-color);
    }

    .alert-warning {
      background: var(--glass-bg);
      border-color: var(--warning-color);
      color: var(--text-color);
    }

    .alert-warning i {
      color: var(--warning-color);
    }

    .alert-error {
      background: var(--glass-bg);
      border-color: var(--error-color);
      color: var(--text-color);
    }

    .alert-error i {
      color: var(--error-color);
    }

    .alert-info {
      background: var(--glass-bg);
      border-color: var(--accent-color);
      color: var(--text-color);
    }

    .alert-info i {
      color: var(--accent-color);
    }

    .alert i {
      font-size: 1.3rem;
      flex-shrink: 0;
    }

    /* Read-Only Banner */
    .readonly-banner {
      background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
      color: white;
      padding: 1.5rem;
      border-radius: 15px;
      text-align: center;
      margin-bottom: 2rem;
      box-shadow: var(--shadow-lg);
    }

    .readonly-banner h3 {
      margin: 0 0 0.5rem 0;
      font-size: 1.3rem;
    }

    .readonly-banner p {
      margin: 0;
      opacity: 0.95;
      font-size: 0.95rem;
    }

    /* Tabs */
    .tabs-container {
      margin-bottom: 2rem;
    }

    .tabs-nav {
      display: flex;
      gap: 0.5rem;
      background: var(--glass-bg);
      backdrop-filter: blur(10px);
      padding: 0.5rem;
      border-radius: 15px;
      border: 1px solid var(--glass-border);
      overflow-x: auto;
      box-shadow: var(--shadow-sm);
    }

    .tabs-nav::-webkit-scrollbar {
      height: 6px;
    }

    .tabs-nav::-webkit-scrollbar-track {
      background: transparent;
    }

    .tabs-nav::-webkit-scrollbar-thumb {
      background: var(--accent-color);
      border-radius: 3px;
    }

    .tab-btn {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1.5rem;
      border: none;
      background: transparent;
      color: var(--text-secondary);
      font-size: 0.9rem;
      font-weight: 500;
      cursor: pointer;
      border-radius: 10px;
      transition: all 0.2s;
      white-space: nowrap;
      position: relative;
    }

    .tab-btn:hover {
      background: rgba(14, 165, 233, 0.1);
      color: var(--text-color);
    }

    .tab-btn.active {
      background: var(--accent-color);
      color: white;
      box-shadow: 0 4px 12px rgba(14, 165, 233, 0.3);
    }

    .tab-btn i {
      font-size: 1rem;
    }

    .tab-badge {
      background: rgba(239, 68, 68, 0.2);
      color: var(--error-color);
      border: 1px solid var(--error-color);
      padding: 0.15rem 0.5rem;
      border-radius: 10px;
      font-size: 0.7rem;
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      gap: 0.25rem;
    }

    /* Tab Badge Variants */
    .tab-badge.success-badge {
      background: rgba(16, 185, 129, 0.2);
      color: #10b981;
      border-color: #10b981;
    }

    .tab-badge.error-badge {
      background: rgba(239, 68, 68, 0.2);
      color: #ef4444;
      border-color: #ef4444;
    }

    .tab-badge.premium-badge {
      background: linear-gradient(135deg, rgba(139, 92, 246, 0.2), rgba(219, 39, 119, 0.2));
      color: #a855f7;
      border-color: #a855f7;
    }

    .tab-btn.active .tab-badge {
      background: rgba(255, 255, 255, 0.2);
      color: white;
      border-color: rgba(255, 255, 255, 0.4);
    }

    .tab-btn.active .tab-badge.success-badge {
      background: rgba(16, 185, 129, 0.3);
      color: #d1fae5;
      border-color: #6ee7b7;
    }

    .tab-btn.active .tab-badge.error-badge {
      background: rgba(239, 68, 68, 0.3);
      color: #fecaca;
      border-color: #fca5a5;
    }

    .tab-btn.active .tab-badge.premium-badge {
      background: linear-gradient(135deg, rgba(139, 92, 246, 0.4), rgba(219, 39, 119, 0.4));
      color: #e9d5ff;
      border-color: #c4b5fd;
    }

    .tab-content {
      display: none;
      animation: fadeIn 0.3s ease-out;
    }

    .tab-content.active {
      display: block;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Cards */
    .card {
      background: var(--glass-bg);
      backdrop-filter: blur(10px);
      border: 1px solid var(--glass-border);
      border-radius: 15px;
      padding: 1.5rem;
      margin-bottom: 1.5rem;
      transition: all 0.3s;
      box-shadow: var(--shadow-sm);
    }

    .card:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-md);
    }

    .card-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 1.5rem;
      padding-bottom: 1rem;
      border-bottom: 1px solid var(--glass-border);
    }

    .card-title {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      font-size: 1.2rem;
      font-weight: 600;
      color: var(--text-color);
    }

    .card-icon {
      width: 40px;
      height: 40px;
      background: linear-gradient(135deg, var(--accent-color), var(--accent-hover));
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.1rem;
    }

    .card-description {
      font-size: 0.85rem;
      color: var(--text-secondary);
      margin-top: 0.25rem;
    }

    .card-body {
      /* Content area */
    }

    /* Form Elements */
    .form-group {
      margin-bottom: 1.5rem;
    }

    .form-label {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      color: var(--text-color);
      font-size: 0.9rem;
    }

    .form-label i {
      color: var(--accent-color);
      font-size: 0.9rem;
    }

    .form-label-optional {
      font-weight: normal;
      color: var(--text-secondary);
      font-size: 0.8rem;
      margin-left: auto;
    }

    .help-text {
      font-size: 0.8rem;
      color: var(--text-secondary);
      margin-top: 0.5rem;
      display: flex;
      align-items: flex-start;
      gap: 0.5rem;
      line-height: 1.5;
    }

    .help-text i {
      margin-top: 0.2rem;
      color: var(--accent-color);
      flex-shrink: 0;
    }

    input, select, textarea {
      width: 100%;
      padding: 0.75rem 1rem;
      border: 1px solid var(--border-color);
      border-radius: 10px;
      background: var(--glass-bg);
      backdrop-filter: blur(10px);
      color: var(--text-color);
      font-size: 0.9rem;
      transition: all 0.2s;
      font-family: inherit;
    }

    input:focus, select:focus, textarea:focus {
      outline: none;
      border-color: var(--accent-color);
      box-shadow: 0 0 0 3px rgba(14, 165, 233, 0.1);
    }

    input:disabled, select:disabled, textarea:disabled {
      opacity: 0.6;
      cursor: not-allowed;
      background: var(--bg-secondary);
    }

    /* Toggle Switch Styles */
    .toggle-container {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .toggle-label {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      cursor: pointer;
      user-select: none;
    }

    .toggle-label input[type="checkbox"] {
      display: none;
    }

    .toggle-slider {
      position: relative;
      width: 50px;
      height: 26px;
      background: var(--border-color);
      border-radius: 34px;
      transition: all 0.3s;
      flex-shrink: 0;
    }

    .toggle-slider::before {
      content: '';
      position: absolute;
      width: 20px;
      height: 20px;
      left: 3px;
      top: 3px;
      background: white;
      border-radius: 50%;
      transition: all 0.3s;
    }

    .toggle-label input:checked + .toggle-slider {
      background: var(--accent-color);
    }

    .toggle-label input:checked + .toggle-slider::before {
      transform: translateX(24px);
    }

    .toggle-text {
      font-weight: 500;
      color: var(--text-color);
    }

    select[multiple] {
      height: auto;
      min-height: 150px;
      padding: 0.5rem;
    }

    select[multiple] option {
      padding: 0.5rem;
      border-radius: 6px;
      margin-bottom: 0.25rem;
    }

    select[multiple] option:checked {
      background: var(--accent-color);
      color: white;
    }

    textarea {
      min-height: 120px;
      resize: vertical;
      font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
      line-height: 1.6;
    }

    /* Buttons */
    .btn {
      padding: 0.75rem 1.5rem;
      border: none;
      border-radius: 10px;
      font-size: 0.9rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      text-decoration: none;
      justify-content: center;
    }

    .btn-primary {
      background: linear-gradient(135deg, #667eea, #764ba2);
      color: white;
      box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }

    .btn-success {
      background: linear-gradient(135deg, var(--success-color), #059669);
      color: white;
      box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
    }

    .btn-success:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
    }

    .btn-warning {
      background: linear-gradient(135deg, var(--warning-color), #d97706);
      color: white;
      box-shadow: 0 4px 12px rgba(245, 158, 11, 0.3);
    }

    .btn-warning:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(245, 158, 11, 0.4);
    }

    .btn-outline {
      background: transparent;
      border: 2px solid var(--accent-color);
      color: var(--accent-color);
    }

    .btn-outline:hover {
      background: var(--accent-color);
      color: white;
    }

    .btn-sm {
      padding: 0.5rem 1rem;
      font-size: 0.85rem;
    }

    .btn:disabled {
      opacity: 0.5;
      cursor: not-allowed;
      transform: none !important;
    }

    .btn-group {
      display: flex;
      gap: 0.75rem;
      flex-wrap: wrap;
    }

    /* Grid System */
    .grid {
      display: grid;
      gap: 1.5rem;
    }

    .grid-2 {
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    }

    .grid-3 {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    }

    /* Stats Cards */
    .stats-card {
      background: var(--glass-bg);
      backdrop-filter: blur(10px);
      border: 1px solid var(--glass-border);
      border-radius: 12px;
      padding: 1.25rem;
      display: flex;
      align-items: center;
      gap: 1rem;
      transition: all 0.2s;
      box-shadow: var(--shadow-sm);
    }

    .stats-card:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-md);
    }

    .trial-stats-card {
      background: linear-gradient(135deg, rgba(240, 147, 251, 0.15) 0%, rgba(245, 87, 108, 0.15) 100%);
      border: 2px solid rgba(240, 147, 251, 0.5);
      box-shadow: 0 4px 16px rgba(240, 147, 251, 0.3);
    }

    .trial-stats-card:hover {
      box-shadow: 0 6px 20px rgba(240, 147, 251, 0.5);
    }

    .trial-stats-card .stats-icon {
      background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }

    .stats-icon {
      width: 50px;
      height: 50px;
      background: linear-gradient(135deg, var(--accent-color), var(--accent-hover));
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.5rem;
      flex-shrink: 0;
    }

    .stats-content h4 {
      font-size: 0.8rem;
      color: var(--text-secondary);
      margin: 0 0 0.25rem 0;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .stats-content p {
      font-size: 1.8rem;
      font-weight: 700;
      color: var(--text-color);
      margin: 0;
    }

    /* Priority Badge */
    .priority-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.35rem 0.85rem;
      border-radius: 20px;
      font-size: 0.8rem;
      font-weight: 600;
      border: 1px solid;
    }

    .priority-green {
      background: rgba(16, 185, 129, 0.15);
      color: var(--success-color);
      border-color: var(--success-color);
    }

    .priority-orange {
      background: rgba(245, 158, 11, 0.15);
      color: var(--warning-color);
      border-color: var(--warning-color);
    }

    .priority-red {
      background: rgba(239, 68, 68, 0.15);
      color: var(--error-color);
      border-color: var(--error-color);
    }

    /* Topics List */
    .topics-list {
      display: grid;
      gap: 1rem;
    }

    .topic-item {
      background: var(--glass-bg);
      padding: 1rem;
      border-radius: 10px;
      border: 1px solid var(--glass-border);
      display: flex;
      align-items: center;
      gap: 1rem;
      transition: all 0.2s;
    }

    .topic-item:hover {
      transform: translateX(4px);
      box-shadow: var(--shadow-sm);
    }

    .topic-emoji {
      font-size: 2rem;
      flex-shrink: 0;
    }

    .topic-details {
      flex: 1;
    }

    .topic-label {
      font-weight: 600;
      margin-bottom: 0.25rem;
      color: var(--text-color);
    }

    .topic-value {
      font-size: 0.8rem;
      color: var(--text-secondary);
      font-family: monospace;
    }

    /* Form Field Items & Topic Items */
    .form-field-item,
    .topic-item {
      background: var(--glass-bg);
      padding: 1.5rem;
      border-radius: 12px;
      border: 1px solid var(--glass-border);
      margin-bottom: 1.5rem;
      transition: all 0.2s;
    }

    .form-field-item:hover,
    .topic-item:hover {
      box-shadow: var(--shadow-sm);
    }

    .form-field-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 1.5rem;
      padding-bottom: 1rem;
      border-bottom: 1px solid var(--glass-border);
    }

    .form-field-number {
      font-size: 1.2rem;
      font-weight: 700;
      color: var(--accent-color);
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .form-field-number::before {
      content: 'üìã';
      font-size: 1.5rem;
    }

