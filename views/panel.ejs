  <script>
    // Tab Switching - Main tabs and subtabs
    const tabBtns = document.querySelectorAll('.tab-btn');
    const tabContents = document.querySelectorAll('.tab-content');
    const subtabsNavs = document.querySelectorAll('.subtabs-nav');
    const subtabBtns = document.querySelectorAll('.subtab-btn');

    // Main tab switching
    tabBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const tabId = btn.getAttribute('data-tab');

        // Remove active from all main tabs
        tabBtns.forEach(b => b.classList.remove('active'));
        tabContents.forEach(c => c.classList.remove('active'));
        subtabsNavs.forEach(s => s.classList.remove('active'));

        // Activate clicked tab
        btn.classList.add('active');

        // Check if tab has subtabs
        const subtabsNav = document.querySelector(`.subtabs-nav[data-parent="${tabId}"]`);
        if (subtabsNav) {
          // Show subtabs navigation
          subtabsNav.classList.add('active');
          // Activate first subtab by default
          const firstSubtab = subtabsNav.querySelector('.subtab-btn');
          if (firstSubtab) {
            firstSubtab.click();
          }
        } else {
          // No subtabs, show main content directly
          const content = document.getElementById(`tab-${tabId}`);
          if (content) {
            content.classList.add('active');
          }
        }

        // Save to localStorage
        localStorage.setItem('activeTab', tabId);
      });
    });

    // Subtab switching
    subtabBtns.forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.stopPropagation(); // Prevent parent tab click
        const subtabId = btn.getAttribute('data-subtab');
        const parent = btn.closest('.subtabs-nav').getAttribute('data-parent');

        // Remove active from all subtabs in this group
        const parentNav = btn.closest('.subtabs-nav');
        parentNav.querySelectorAll('.subtab-btn').forEach(b => b.classList.remove('active'));
        tabContents.forEach(c => c.classList.remove('active'));

        // Activate clicked subtab
        btn.classList.add('active');
        const content = document.getElementById(`tab-${subtabId}`);
        if (content) {
          content.classList.add('active');
        }

        // Save to localStorage
        localStorage.setItem('activeSubtab', subtabId);
      });
    });

    // Disable browser form draft/autosave feature
    window.addEventListener('DOMContentLoaded', () => {
      // Prevent browser from showing "draft found" dialog
      const form = document.getElementById('panelForm');
      if (form) {
        // Add autocomplete attributes to all inputs
        const inputs = form.querySelectorAll('input, textarea, select');
        inputs.forEach(input => {
          input.setAttribute('autocomplete', 'off');
          input.setAttribute('data-form-type', 'other'); // Prevents password managers
        });

        // Clear any stored form data on load
        try {
          sessionStorage.removeItem('panelFormData');
          // Don't restore form values from browser cache
          setTimeout(() => {
            if (window.performance && performance.navigation.type === 2) {
              // Page was accessed by navigating back/forward
              window.location.reload();
            }
          }, 0);
        } catch(e) {}
      }

      // Restore active tab from localStorage
      const savedTab = localStorage.getItem('activeTab');
      if (savedTab) {
        const btn = document.querySelector(`[data-tab="${savedTab}"]`);
        if (btn) {
          btn.click();
        }
      }

      // Enable/Disable "Panel senden" button based on channel selection
      const panelChannelSelect = document.querySelector('select[name="panelChannelId"]');
      const sendPanelBtn = document.getElementById('sendPanelBtn');

      if (panelChannelSelect && sendPanelBtn) {
        // Initial state
        sendPanelBtn.disabled = !panelChannelSelect.value;

        // Listen for changes
        panelChannelSelect.addEventListener('change', function() {
          sendPanelBtn.disabled = !this.value;
        });
      }
    });

