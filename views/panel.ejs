                    <span style="font-weight: 500;"><%= t.premium.auto_close_enable %></span>
                  </label>
                  <div class="form-group">
                    <div class="form-label">
                      <i class="fas fa-calendar-days"></i>
                      <span><%= lang === 'de' ? 'Tage' : 'Days' %></span>
                    </div>
                    <input
                      type="number"
                      name="autoCloseDays"
                      value="<%= cfg.autoCloseDays || 7 %>"
                      min="1"
                      max="365"
                      placeholder="7">
                    <div class="help-text">
                      <i class="fas fa-lightbulb"></i>
                      <span><%= t.premium.auto_close_description %></span>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- DM Notifications -->
            <div class="card">
              <div class="card-header">
                <div>
                  <div class="card-title">
                    <div class="card-icon" style="background: linear-gradient(135deg, #764ba2, #667eea);">
                      <i class="fas fa-bell"></i>
                    </div>
                    <span><%= t.premium.dm_notifications_label %></span>
                    <span class="priority-badge" style="background: #764ba2; color: white; border-color: #764ba2;">PRO</span>
                  </div>
                  <p class="card-description">
                    <%= t.premium.dm_notifications_description %>
                  </p>
                </div>
              </div>
              <div class="card-body">
                <div class="form-group">
                  <div class="form-label">
                    <i class="fas fa-users"></i>
                    <span><%= lang === 'de' ? 'Benutzer-IDs (eine pro Zeile)' : 'User IDs (one per line)' %></span>
                  </div>
                  <textarea
                    name="dmNotificationUsers"
                    rows="6"
                    placeholder="<%= t.premium.dm_notifications_placeholder %>"
                  ><%= (cfg.dmNotificationUsers || []).join('\n') %></textarea>
