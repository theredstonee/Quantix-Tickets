    .support-hours-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 1rem;
      margin-top: 1rem;
    }

    .support-hours-day {
      background: var(--glass-bg);
      border: 1px solid var(--glass-border);
      border-radius: 10px;
      padding: 1rem;
      backdrop-filter: blur(10px);
    }

    .day-header {
      margin-bottom: 0.75rem;
    }

    .day-times {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      transition: opacity 0.3s ease;
    }

    .time-input {
      flex: 1;
      padding: 0.5rem;
      border-radius: 6px;
      border: 1px solid var(--glass-border);
      background: var(--bg-secondary);
      color: var(--text-primary);
      font-size: 0.9rem;
    }

    .time-separator {
      font-size: 1.2rem;
      font-weight: bold;
      color: var(--text-secondary);
    }

    .toggle-switch.small {
      font-size: 0.9rem;
    }

    .toggle-switch.small .toggle-slider {
      width: 40px;
      height: 20px;
    }

    .toggle-switch.small .toggle-slider:before {
      width: 14px;
      height: 14px;
    }

    .toggle-switch.small input:checked + .toggle-slider:before {
      transform: translateX(20px);
    }

    .feature-header {
      margin-bottom: 2rem;
      text-align: center;
    }

    .feature-title {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1rem;
      margin-bottom: 0.5rem;
    }

    .feature-title i {
      font-size: 2rem;
      color: var(--accent-color);
    }

    .feature-title h3 {
      margin: 0;
      font-size: 1.8rem;
    }

    .feature-description {
      color: var(--text-secondary);
      max-width: 800px;
      margin: 0 auto;
      line-height: 1.6;
    }

    .color-input {
      height: 50px;
      cursor: pointer;
      border-radius: 8px;
      border: 2px solid var(--glass-border);
    }

    .color-input::-webkit-color-swatch-wrapper {
      padding: 4px;
    }

    .color-input::-webkit-color-swatch {
      border: none;
      border-radius: 6px;
    }

    .save-footer {
      margin-top: 2rem;
      padding-top: 1.5rem;
      border-top: 1px solid var(--glass-border);
      text-align: center;
    }

    .tab-badge.active-badge {
      background: linear-gradient(135deg, #00ff88, #00cc6a);
      animation: pulse 2s ease-in-out infinite;
    }

    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.7; }
    }
  </style>
