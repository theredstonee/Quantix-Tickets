        console.error(err);
        alert('<%= lang === "de" ? "Netzwerkfehler beim Hochladen" : "Network error during upload" %>');
        uploadBtn.disabled = false;
        uploadBtn.innerHTML = '<i class="fas fa-cloud-upload-alt"></i> <%= lang === "de" ? "Hochladen" : "Upload" %>';
      });
    }

    function deleteAvatar() {
      if (!confirm('<%= lang === "de" ? "Avatar wirklich l√∂schen?" : "Really delete avatar?" %>')) {
        return;
      }

      fetch('/panel/delete-avatar', {
        method: 'POST'
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          alert('<%= lang === "de" ? "Avatar gel√∂scht!" : "Avatar deleted!" %>');
          window.location.reload();
        } else {
          alert('<%= lang === "de" ? "Fehler beim L√∂schen" : "Error deleting avatar" %>');
        }
      })
      .catch(err => {
        console.error(err);
        alert('<%= lang === "de" ? "Netzwerkfehler" : "Network error" %>');
      });
    }

    // Voice Support Mode Switcher
    function toggleDayInputs(checkbox, dayKey) {
      const dayTimesEl = document.getElementById(`dayTimes_${dayKey}`);
      if (dayTimesEl) {
        if (checkbox.checked) {
          dayTimesEl.style.opacity = '1';
          dayTimesEl.style.pointerEvents = 'auto';
        } else {
          dayTimesEl.style.opacity = '0.5';
          dayTimesEl.style.pointerEvents = 'none';
        }
      }
    }

    // Handle Voice Support Mode Change
    const voiceSupportModeSelect = document.getElementById('voiceSupportMode');
    if (voiceSupportModeSelect) {
      voiceSupportModeSelect.addEventListener('change', function() {
        const mode = this.value;
        const supportChannelGroup = document.getElementById('supportChannelGroup');
        const categoryGroup = document.getElementById('categoryGroup');
        const embedConfigGroup = document.getElementById('embedConfigGroup');

        if (mode === 'category_embed') {
          // Show support channel and embed config, hide category
          if (supportChannelGroup) supportChannelGroup.style.display = 'block';
          if (embedConfigGroup) embedConfigGroup.style.display = 'block';
          if (categoryGroup) categoryGroup.style.display = 'none';
        } else {
          // Show category, hide support channel and embed config
          if (supportChannelGroup) supportChannelGroup.style.display = 'none';
          if (embedConfigGroup) embedConfigGroup.style.display = 'none';
          if (categoryGroup) categoryGroup.style.display = 'block';
        }
      });

      // Trigger on page load
      voiceSupportModeSelect.dispatchEvent(new Event('change'));
    }

  </script>
