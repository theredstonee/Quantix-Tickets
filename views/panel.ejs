    async function sendPanel() {
      const title = "<%= lang === 'de' ? 'Panel senden?' : 'Send Panel?' %>";
      const message = "<%= lang === 'de' ? 'M√∂chtest du die Panel-Nachricht jetzt senden?' : 'Do you want to send the panel message now?' %>";

      const confirmed = await showConfirm(title, message);
      if (!confirmed) return;

      document.getElementById('loadingOverlay').classList.add('show');

      const form = document.createElement('form');
      form.method = 'POST';
      form.action = '/panel/send';
      document.body.appendChild(form);
      form.submit();
    }

    // Edit Panel
    async function editPanel() {
      const title = "<%= lang === 'de' ? 'Panel aktualisieren?' : 'Update Panel?' %>";
      const message = "<%= lang === 'de' ? 'M√∂chtest du die Panel-Nachricht aktualisieren?' : 'Do you want to update the panel message?' %>";

      const confirmed = await showConfirm(title, message);
      if (!confirmed) return;

      document.getElementById('loadingOverlay').classList.add('show');

      const form = document.createElement('form');
      form.method = 'POST';
      form.action = '/panel/edit';
      document.body.appendChild(form);
      form.submit();
    }

    // Quick Save
    function quickSave() {
      document.getElementById('panelForm').submit();
      document.getElementById('loadingOverlay').classList.add('show');
    }

    // Form Submit Loading
    document.getElementById('panelForm').addEventListener('submit', function() {
      document.getElementById('loadingOverlay').classList.add('show');
    });

    // Auto-save to localStorage on input
    let saveTimeout;
    document.querySelectorAll('input, select, textarea').forEach(input => {
      input.addEventListener('input', () => {
        clearTimeout(saveTimeout);
        saveTimeout = setTimeout(() => {
          // Optional: Add visual feedback that draft was saved
        }, 1000);
      });
    });

    // Form Fields Management
    function addFormField() {
      const container = document.getElementById('formFieldsList');
      const currentFields = container.querySelectorAll('.form-field-item');
      const newIndex = currentFields.length;

      const fieldHtml = `
        <div class="form-field-item" data-index="${newIndex}">
          <div class="form-field-header">
            <span class="form-field-number">${newIndex + 1}</span>
            <button type="button" class="btn-icon-danger" onclick="removeFormField(this)">
              <i class="fas fa-trash"></i>
            </button>
          </div>

          <div class="form-group">
            <div class="form-label">
              <i class="fas fa-tag"></i>
              <span><%= lang === 'de' ? 'Feld-Label' : 'Field Label' %></span>
            </div>
            <input
              type="text"
              name="formField_label_${newIndex}"
              placeholder="<%= lang === 'de' ? 'z. B. Problem-Beschreibung' : 'e.g. Problem Description' %>"
              required>
          </div>

          <div class="form-group">
            <div class="form-label">
              <i class="fas fa-keyboard"></i>
              <span><%= lang === 'de' ? 'Platzhalter' : 'Placeholder' %></span>
            </div>
            <input
              type="text"
              name="formField_placeholder_${newIndex}"
              placeholder="<%= lang === 'de' ? 'Erkl√§re uns genau, worum es geht...' : 'Explain exactly what it is about...' %>">
          </div>

          <div class="grid grid-2">
            <div class="form-group">
              <div class="form-label">
                <i class="fas fa-text-height"></i>
                <span><%= lang === 'de' ? 'Feld-Typ' : 'Field Type' %></span>
              </div>
              <select name="formField_style_${newIndex}">
                <option value="short"><%= lang === 'de' ? 'Kurze Antwort (1 Zeile)' : 'Short Answer (1 line)' %></option>
                <option value="paragraph"><%= lang === 'de' ? 'Lange Antwort (Absatz)' : 'Long Answer (Paragraph)' %></option>
                <option value="number"><%= lang === 'de' ? 'Nur Zahl' : 'Number Only' %></option>
              </select>
            </div>

            <div class="form-group">
              <label style="display: flex; align-items: center; gap: 0.75rem; padding: 0.75rem; background: var(--glass-bg); border-radius: 8px; cursor: pointer;">
                <input
                  type="checkbox"
                  name="formField_required_${newIndex}"
                  style="width: auto; margin: 0;">
                <span style="font-weight: 500;">
                  <i class="fas fa-asterisk" style="font-size: 0.7rem; color: var(--accent-color);"></i>
                  <%= lang === 'de' ? 'Pflichtfeld' : 'Required' %>
                </span>
              </label>
            </div>
          </div>

          <div class="form-group">
            <div class="form-label">
              <i class="fas fa-tags"></i>
              <span><%= lang === 'de' ? 'Nur f√ºr Themen (optional)' : 'Only for Topics (optional)' %></span>
            </div>
            <select name="formField_topic_${newIndex}" multiple style="height: 120px;">
              <option value="" selected><%= lang === 'de' ? 'Alle Themen' : 'All Topics' %></option>
              <% (cfg.topics || []).forEach(topic => { %>
                <option value="<%= topic.value %>"><%= topic.emoji || 'üìå' %> <%= topic.label %></option>
              <% }); %>
            </select>
            <div class="help-text">
              <i class="fas fa-lightbulb"></i>
              <span>
                <%= lang === 'de'
                  ? 'Leer = Feld erscheint bei allen Themen. Strg/Cmd gedr√ºckt halten f√ºr Mehrfachauswahl.'
                  : 'Empty = Field appears for all topics. Hold Ctrl/Cmd for multiple selection.'
                %>
              </span>
            </div>
          </div>
        </div>
      `;

      container.insertAdjacentHTML('beforeend', fieldHtml);
      updateFormFieldNumbers();
    }

    function removeFormField(button) {
      const fieldItem = button.closest('.form-field-item');
      fieldItem.remove();
      updateFormFieldNumbers();
    }

    function updateFormFieldNumbers() {
      const fields = document.querySelectorAll('.form-field-item');
      fields.forEach((field, index) => {
        field.setAttribute('data-index', index);
        const numberSpan = field.querySelector('.form-field-number');
        if (numberSpan) {
          numberSpan.textContent = index + 1;
        }

        // Update input names
        field.querySelectorAll('input, select, textarea').forEach(input => {
          const name = input.getAttribute('name');
          if (name && name.startsWith('formField_')) {
            const parts = name.split('_');
            parts[parts.length - 1] = index;
            input.setAttribute('name', parts.join('_'));
          }
        });
      });
    }

    // Topics Management
    function addTopic() {
      const container = document.getElementById('topicsList');
      const currentTopics = container.querySelectorAll('.form-field-item');
      const newIndex = currentTopics.length;

      const topicHtml = `
        <div class="form-field-item" data-index="${newIndex}">
          <div class="form-field-header">
            <span class="form-field-number">${newIndex + 1}</span>
            <button type="button" class="btn-icon-danger" onclick="removeTopic(this)">
              <i class="fas fa-trash"></i>
            </button>
          </div>

          <div class="form-group">
            <div class="form-label">
              <i class="fas fa-tag"></i>
              <span><%= lang === 'de' ? 'Themen-Name' : 'Topic Name' %></span>
            </div>
            <input
              type="text"
              name="topic_label_${newIndex}"
              placeholder="<%= lang === 'de' ? 'z. B. Support' : 'e.g. Support' %>"
              required>
          </div>

          <div class="grid grid-2">
            <div class="form-group">
              <div class="form-label">
                <i class="fas fa-code"></i>
                <span><%= lang === 'de' ? 'Interner Wert' : 'Internal Value' %></span>
              </div>
              <input
                type="text"
                name="topic_value_${newIndex}"
                placeholder="<%= lang === 'de' ? 'z. B. support' : 'e.g. support' %>"
                required>
              <div class="help-text">
                <i class="fas fa-info-circle"></i>
                <span><%= lang === 'de' ? 'Nur Kleinbuchstaben, keine Leerzeichen' : 'Lowercase only, no spaces' %></span>
              </div>
            </div>

            <div class="form-group">
              <div class="form-label">
                <i class="fas fa-smile"></i>
                <span><%= lang === 'de' ? 'Emoji' : 'Emoji' %></span>
              </div>
              <input
                type="text"
                name="topic_emoji_${newIndex}"
                placeholder="‚ùì"
                maxlength="2"
                required>
            </div>
          </div>
        </div>
      `;

      container.insertAdjacentHTML('beforeend', topicHtml);
      updateTopicNumbers();
    }

    function removeTopic(button) {
      const topicItem = button.closest('.form-field-item');
      topicItem.remove();
      updateTopicNumbers();
    }

    function updateTopicNumbers() {
      const topics = document.querySelectorAll('#topicsList .form-field-item');
      topics.forEach((topic, index) => {
        topic.setAttribute('data-index', index);
        const numberSpan = topic.querySelector('.form-field-number');
        if (numberSpan) {
          numberSpan.textContent = index + 1;
        }

        // Update input names
        topic.querySelectorAll('input').forEach(input => {
          const name = input.getAttribute('name');
          if (name && name.startsWith('topic_')) {
            const parts = name.split('_');
            parts[parts.length - 1] = index;
            input.setAttribute('name', parts.join('_'));
          }
        });
      });
    }
  </script>
</body>
