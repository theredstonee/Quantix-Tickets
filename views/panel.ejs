      position: absolute;
      top: calc(100% + 0.5rem);
      right: 0;
      background: var(--glass-bg-solid);
      backdrop-filter: blur(20px);
      border: 1px solid var(--glass-border);
      border-radius: 12px;
      box-shadow: var(--shadow-lg);
      display: none;
      min-width: 200px;
      overflow: hidden;
    }

    .lang-dropdown-menu.show {
      display: block;
      animation: slideDown 0.2s ease-out;
    }

    @keyframes slideDown {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .lang-dropdown-item {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.75rem 1rem;
      cursor: pointer;
      transition: all 0.2s;
      text-decoration: none;
      color: var(--text-color);
      border-bottom: 1px solid var(--glass-border);
    }

    .lang-dropdown-item:last-child {
      border-bottom: none;
    }

    .lang-dropdown-item:hover {
      background: var(--accent-color);
      color: white;
    }

    .lang-dropdown-item.active {
      background: var(--accent-color);
      color: white;
      font-weight: 600;
    }

    .lang-dropdown-item img {
      width: 24px;
      height: 18px;
      border-radius: 3px;
    }

    /* Loading Overlay */
    .loading-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.8);
      backdrop-filter: blur(5px);
      display: none;
      justify-content: center;
      align-items: center;
      z-index: 9999;
    }

    .loading-overlay.show {
      display: flex;
    }

    .loading-spinner {
      width: 60px;
      height: 60px;
      border: 6px solid rgba(14, 165, 233, 0.2);
      border-top-color: var(--accent-color);
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    /* Save Button Fixed */
    .save-button-fixed {
      position: fixed;
      bottom: 2rem;
      right: 2rem;
      z-index: 998;
      box-shadow: var(--shadow-lg);
    }

    /* Mobile Menu Toggle */
    .mobile-toggle {
      display: none;
      position: fixed;
      bottom: 2rem;
      left: 2rem;
      width: 60px;
      height: 60px;
      border-radius: 50%;
      background: var(--accent-color);
      color: white;
      border: none;
      font-size: 1.5rem;
      cursor: pointer;
      z-index: 999;
      box-shadow: var(--shadow-lg);
      transition: all 0.2s;
    }

    .mobile-toggle:hover {
      transform: scale(1.1);
    }

    /* Responsive */
    @media (max-width: 1024px) {
      .sidebar {
        transform: translateX(-100%);
      }

      .sidebar.mobile-open {
        transform: translateX(0);
      }

      .main-content {
        margin-left: 0;
        max-width: 100%;
      }

      .mobile-toggle {
        display: block;
      }

      .content-header {
        flex-direction: column;
        align-items: flex-start;
        margin-top: 5rem; /* Mehr Platz auf Tablets f√ºr fixed Elements */
