<!-- views/ticketDetail.ejs -->
<!DOCTYPE html>
<html lang="de" data-theme="light">
<head>
  <meta charset="UTF-8">
  <title>Ticket #<%= ticket.id.toString().padStart(5, '0') %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@1/css/pico.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <style>
    :root {
      --bg-color: #fff;
      --text-color: #1a1a1a;
      --border-color: #e5e8ec;
      --accent-color: #00b894;
      --accent-hover: #00a077;
      --card-bg: #f8f9fa;
    }

    [data-theme="dark"] {
      --bg-color: #0a0a0a;
      --text-color: #00ff88;
      --border-color: #1a3a2a;
      --accent-color: #00ff88;
      --accent-hover: #00dd77;
      --card-bg: #0f1510;
    }

    [data-theme="dark"] body {
      background-color: var(--bg-color);
      color: var(--text-color);
    }

    [data-theme="dark"] a {
      color: var(--accent-color);
    }

    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
    }

    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      max-width: 1200px;
      padding: 0 5rem;
      line-height: 1.8;
      margin: 0 auto;
    }

    main {
      flex: 1;
    }

    h1, h2 {
      color: var(--accent-color);
    }
  </style>
  <script>
    // Load saved theme
    const savedTheme = localStorage.getItem('theme') || 'light';
    document.documentElement.setAttribute('data-theme', savedTheme);
  </script>
</head>
<body>
  <h1>Ticket #<%= ticket.id.toString().padStart(5, '0') %></h1>
  <p>Status: <strong><%= ticket.status %></strong></p>
  <p>Thema: <strong><%= ticket.topic %></strong></p>
  <p>Erstellt von: <code><%= ticket.userId %></code></p>
  <p>Datum: <%= new Date(ticket.timestamp).toLocaleString() %></p>
  
  <h2>Formulardaten</h2>
  <ul>
    <% if (ticket.formData) { %>
      <% Object.entries(ticket.formData).forEach(([key, value]) => { %>
        <li><strong><%= key %>:</strong> <%= value || '-' %></li>
      <% }) %>
    <% } else { %>
      <li><em>Keine Daten gespeichert</em></li>
    <% } %>
  </ul>

  <h2>Aktionen</h2>
  <a href="/tickets"><i class="fas fa-arrow-left"></i> Zur Ãœbersicht</a>
  <!-- Platzhalter fÃ¼r spÃ¤tere Export-Links -->
  <% if (ticket.transcript) { %>
    | <a href="/transcripts/<%= ticket.transcript %>" target="_blank">ðŸ“„ Transcript</a>
  <% } %>
</body>
</html>
