<!-- views/ticketDetail.ejs -->
<!DOCTYPE html>
<html lang="de">
<head>
  <!-- Theme Manager - Load before anything else -->
  <script src="/js/theme-manager.js"></script>
  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-SLMX16ZJ6Y"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-SLMX16ZJ6Y');
  </script>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0">
  <title>Ticket #<%= ticket.id.toString().padStart(5, '0') %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@1/css/pico.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link rel="stylesheet" href="/markdown.css">



  <style>
    :root {
      --bg-color: #f0f8ff;
      --text-color: #1a1a2e;
      --border-color: #bdd7ee;
      --accent-color: #0ea5e9;
      --accent-hover: #0284c7;
      --card-bg: rgba(255, 255, 255, 0.9);
      --glass-bg: rgba(240, 248, 255, 0.7);
      --glass-border: rgba(14, 165, 233, 0.3);
      --shadow-color: rgba(14, 165, 233, 0.15);
    }

    [data-theme="dark"] {
      --bg-color: #000000;
      --text-color: #3b82f6;
      --border-color: #1e293b;
      --accent-color: #3b82f6;
      --accent-hover: #60a5fa;
      --card-bg: #0a0a1a;
      --glass-bg: rgba(10, 10, 20, 0.7);
      --glass-border: rgba(59, 130, 246, 0.3);
      --shadow-color: rgba(59, 130, 246, 0.2);
    }

    [data-theme="dark"] body {
      background-color: var(--bg-color);
      color: var(--text-color);
    }

    [data-theme="dark"] a {
      color: var(--accent-color);
    }

    [data-theme="dark"] code {
      background: #0a1a0f;
      color: var(--accent-color);
    }

    /* Animated Background */
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      background: radial-gradient(circle, var(--accent-color) 1px, transparent 1px);
      background-size: 50px 50px;
      opacity: 0.03;
      animation: bgMove 20s linear infinite;
    }

    @keyframes bgMove {
      0% { transform: translate(0, 0); }
      100% { transform: translate(50px, 50px); }
    }

    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
    }

    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      width: 100%;
      max-width: 100%;
      padding: 0 2rem;
      line-height: 1.8;
      margin: 0;
    }

    /* Mobile Responsive */
    @media (max-width: 768px) {
      body {
        padding: 0 1rem;
      }

      h1 { font-size: 1.8rem; }
      h2 { font-size: 1.4rem; }

      .theme-toggle {
        top: 0.5rem !important;
        right: 0.5rem !important;
        width: 2.5rem !important;
        height: 2.5rem !important;
        font-size: 1.2rem !important;
      }

      ul {
        padding-left: 1.5rem;
      }
    }

    /* Tablet Responsive */
    @media (min-width: 769px) and (max-width: 1024px) {
      body {
        padding: 0 2rem;
      }
    }

    main {
      flex: 1;
    }

    h1, h2 {
      color: var(--accent-color);
    }

    footer {
      margin-top: 3rem;
      margin-bottom: 3rem;
      padding-bottom: 2rem;
      text-align: center;
      font-size: 0.75rem;
      opacity: 0.6;
    }

    [data-theme="dark"] footer {
      margin-bottom: 4rem;
      padding-bottom: 3rem;
    }

    .theme-toggle {
      position: fixed;
      top: 1.5rem;
      right: 1.5rem;
      background: var(--accent-color);
      color: #000;
      border: 0;
      width: 3rem;
      height: 3rem;
      border-radius: 50%;
      cursor: pointer;
      font-size: 1.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s;
      box-shadow: 0 2px 8px rgba(0,0,0,0.2);
      z-index: 1000;
    }

    .theme-toggle:hover {
      transform: scale(1.1);
      background: var(--accent-hover);
    }

    [data-theme="dark"] .theme-toggle {
      background: var(--accent-color);
      box-shadow: 0 2px 12px rgba(0,255,136,0.4);
    }
  </style>
  <script>
    // Load saved theme
    const savedTheme = localStorage.getItem('trs-theme') || 'light';
    document.documentElement.setAttribute('data-theme', savedTheme);
  </script>
</head>
<body>
  <button class="theme-toggle" id="themeToggle" title="Dark Mode umschalten">
    <i class="fas fa-moon"></i>
  </button>
  <h1>Ticket #<%= ticket.id.toString().padStart(5, '0') %></h1>
  <p>Status: <strong><%= ticket.status %></strong></p>
  <p>Thema: <strong><%= ticket.topic %></strong></p>
  <p>Erstellt von: <code><%= ticket.userId %></code></p>
  <p>Datum: <%= new Date(ticket.timestamp).toLocaleString() %></p>
  
  <h2>Formulardaten</h2>
  <ul>
    <% if (ticket.formData) { %>
      <% Object.entries(ticket.formData).forEach(([key, value]) => { %>
        <li><strong><%= key %>:</strong> <%= value || '-' %></li>
      <% }) %>
    <% } else { %>
      <li><em>Keine Daten gespeichert</em></li>
    <% } %>
  </ul>

  <% if (ticket.isApplication) { %>
  <h2>üìã Bewerbungsdaten</h2>
  <div style="background: var(--glass-bg); padding: 1rem; border-radius: 8px; border: 1px solid var(--glass-border); margin-bottom: 1rem;">
    <p><strong>Kategorie:</strong> <%= ticket.applicationCategory || ticket.topic %></p>
    <% if (ticket.applicationAnswers && Object.keys(ticket.applicationAnswers).length > 0) { %>
      <h4>Antworten:</h4>
      <ul style="list-style: none; padding-left: 0;">
        <% Object.entries(ticket.applicationAnswers).forEach(([question, answer]) => { %>
          <li style="margin-bottom: 0.75rem; padding: 0.5rem; background: rgba(0,0,0,0.1); border-radius: 4px;">
            <strong><%= question %></strong><br>
            <span style="white-space: pre-wrap;"><%= answer || '-' %></span>
          </li>
        <% }) %>
      </ul>
    <% } %>
    <% if (ticket.interview) { %>
      <h4>üé§ Interview</h4>
      <p><strong>Geplant:</strong> <%= new Date(ticket.interview.scheduledAt).toLocaleString('de-DE') %></p>
      <% if (ticket.interview.note) { %><p><strong>Notiz:</strong> <%= ticket.interview.note %></p><% } %>
    <% } %>
    <% if (ticket.voting) { %>
      <h4>üó≥Ô∏è Abstimmung</h4>
      <p>‚úÖ Ja: <strong><%= ticket.voting.yes || 0 %></strong> | ‚ùå Nein: <strong><%= ticket.voting.no || 0 %></strong></p>
    <% } %>
    <% if (ticket.applicationNotes && ticket.applicationNotes.length > 0) { %>
      <h4>üìù Notizen (<%= ticket.applicationNotes.length %>)</h4>
      <ul style="list-style: none; padding-left: 0;">
        <% ticket.applicationNotes.forEach(note => { %>
          <li style="margin-bottom: 0.5rem; padding: 0.5rem; background: rgba(0,0,0,0.05); border-radius: 4px; font-size: 0.9rem;">
            <span style="opacity: 0.7;"><%= new Date(note.timestamp).toLocaleString('de-DE') %></span> -
            <code><%= note.authorId %></code>: <%= note.content %>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </div>
  <% } %>

  <% if (ticket.splitFrom || (ticket.splitTo && ticket.splitTo.length > 0)) { %>
  <h2>üîÄ Ticket-Verbindungen</h2>
  <div style="background: var(--glass-bg); padding: 1rem; border-radius: 8px; border: 1px solid var(--glass-border); margin-bottom: 1rem;">
    <% if (ticket.splitFrom) { %>
      <p><strong>Abgespalten von:</strong> Ticket #<%= ticket.splitFrom %></p>
    <% } %>
    <% if (ticket.splitTo && ticket.splitTo.length > 0) { %>
      <p><strong>Abgespalten in:</strong> <%= ticket.splitTo.map(id => 'Ticket #' + id).join(', ') %></p>
    <% } %>
  </div>
  <% } %>

  <h2>Aktionen</h2>
  <a href="/tickets"><i class="fas fa-arrow-left"></i> Zur √úbersicht</a>
  <!-- Platzhalter f√ºr sp√§tere Export-Links -->
  <% if (ticket.transcript) { %>
    | <a href="/transcripts/<%= ticket.transcript %>" target="_blank">üìÑ Transcript</a>
  <% } %>

  <footer>
    <p>Quantix Tickets ¬© 2025 Quantix Development ‚Ä¢ Alle Rechte vorbehalten</p>
  </footer>

  <script>
    // Theme is managed by /js/theme-manager.js (Cookie-based)
  </script>



</body>
</html>
