      backdrop-filter: blur(10px);
      border: 2px solid var(--glass-border);
      border-radius: 1rem;
      padding: 2rem;
      box-shadow: 0 8px 32px var(--shadow-color);
      transition: all 0.3s;
      position: relative;
    }

    .feedback-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 40px var(--shadow-color);
      border-color: var(--accent-color);
    }

    .feedback-type {
