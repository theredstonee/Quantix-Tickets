{
  "name": "trs-tickets-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "TRS Tickets Bot - Discord Ticket System with Next.js Admin Panel",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:bot": "pnpm --filter bot dev",
    "dev:web": "pnpm --filter web dev",
    "build": "pnpm run --filter bot build && pnpm run --filter web build",
    "start": "pnpm run --parallel start",
    "start:bot": "pnpm --filter bot start",
    "start:web": "pnpm --filter web start"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
