<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <View
        android:id="@+id/systemMessageIndicator"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="#FFA500"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/authorAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/CircleImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/systemMessageIndicator" />

    <TextView
        android:id="@+id/authorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Username"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintTop_toTopOf="@id/authorAvatar"
        app:layout_constraintStart_toEndOf="@id/authorAvatar"
        app:layout_constraintEnd_toStartOf="@id/messageTime" />

    <TextView
        android:id="@+id/messageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:34"
        android:textSize="12sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintTop_toTopOf="@id/authorName"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/messageContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="Message content goes here..."
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintTop_toBottomOf="@id/authorName"
        app:layout_constraintStart_toEndOf="@id/authorAvatar"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/attachmentIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="ðŸ“Ž 1 Anhang"
        android:textSize="12sp"
        android:textColor="@color/accent_secondary"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/messageContent"
        app:layout_constraintStart_toEndOf="@id/authorAvatar" />

</androidx.constraintlayout.widget.ConstraintLayout>
