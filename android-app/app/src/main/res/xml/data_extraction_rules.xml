<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include shared preferences -->
        <include domain="sharedpref" path="." />

        <!-- Include database -->
        <include domain="database" path="." />

        <!-- Exclude cache directory -->
        <exclude domain="file" path="cache/" />
    </cloud-backup>

    <device-transfer>
        <!-- Include shared preferences -->
        <include domain="sharedpref" path="." />

        <!-- Include database -->
        <include domain="database" path="." />
    </device-transfer>
</data-extraction-rules>
